<style>
  :root {
    --slider-thumb-color: #fff;
    --slider-thumb-active-color: #1F2937;
    --slider-track-color: #EEF2FF;
    --slider-fill-color: #1F2937;
  }

  .slider-container {
    position: relative;
    width: 100%;
    /* margin-bottom: 20px; */
  }

  .range-container {
    position: relative;
    width: 100%;
    margin: 0 0 30px;
  }

  input {
    margin: 0;
    padding: 0;
  }

  .slider {
    -webkit-appearance: none;
    appearance: none;
    width: 100%;
    height: 0;
    position: absolute;
    pointer-events: none;
  }

  .slider::-webkit-slider-runnable-track {
    width: 100%;
    height: 7px;
    background: transparent;
    border-radius: 5px;
  }

  .slider::-webkit-slider-thumb {
    -webkit-appearance: none;
    appearance: none;
    width: 16px;
    height: 16px;
    background-color: var(--slider-thumb-color);
    border: 1px solid var(--slider-fill-color);
    border-radius: 50%;
    cursor: pointer;
    pointer-events: auto;
    transition: transform 0.1s ease;
    transform: translateY(-1px);
  }

  .slider:active::-webkit-slider-thumb {
    background-color: var(--slider-thumb-active-color);
    transform: scale(1.2);
  }

  .slider-track {
    height: 7px;
    background: linear-gradient(
      to right,
      var(--slider-track-color) 0%,
      var(--slider-fill-color) 0%,
      var(--slider-fill-color) 100%,
      var(--slider-track-color) 100%
    );
    border-radius: 5px;
  }
  .slider-track:empty {
    display: block;
  }
  .input-container {
    display: flex;
    justify-content: space-between;
    margin-top: 10px;
    .field{
      width: max-content;
    }
    .field:after, .field:before{
      content: none;
    }
    .range-min-input, .range-max-input{
      padding: 0;
      margin: 0;
      width: unset;
      height: unset;
      min-width: unset;
      min-height: unset;
      max-width: 100px;
      text-align: center;
      display: block;
      padding: 8px 12px;
      border-radius: var(--rounded-3xl, 24px);
      border: 1px solid var(--Border-Base-subtle, #E5E7EB);
      background: var(--Background-base-Muted, #F9FAFB);
      box-shadow: 0px 1px 2px 0px rgba(0, 0, 0, 0.05);
      color: var(--Content-Base-base, #4B5563);
    }
    .range-min-input:focus, .range-max-input:focus{
      outline: none;
      box-shadow: none;
    }
    .range-min-input::placeholder, .range-max-input::placeholder{
      opacity: 1;
      color: var(--Content-Base-base, #4B5563);
    }
  }
</style>

<div class="slider-container">
  <div class="range-container">
    <input
      type="range"
      min="0"
      max="{{ filter.range_max | remove: ',' }}"
      value="{%- if filter.min_value.value -%}{{ filter.min_value.value | remove: ',' }}{%- else -%}0{%- endif -%}"
      class="slider slider-1"
    >
    <input
      type="range"
      min="0"
      max="{{ filter.range_max | remove: ',' }}"
      value="{%- if filter.max_value.value -%}{{ filter.max_value.value | remove: ',' }}{%- else -%}{{ filter.range_max | remove: ',' }}{%- endif -%}"
      class="slider slider-2"
    >
    <div class="slider-track"></div>
  </div>
  <div class="input-container">
    <span class="field-currency hidden">{{ cart.currency.symbol }}</span>

    <div class="field">
      <input
        class="field__input range-min-input"
        name="{{ filter.min_value.param_name }}"
        id="{{ id_prefix }}{{ filter.label | escape }}-GTE"
        {%- if filter.min_value.value -%}
          value="{{ filter.min_value.value | money_without_currency }}"
        {%- endif -%}
        type="text"
        inputmode="decimal"
        placeholder="0"
        data-pattern="\d| |,|\."
        data-min="0"
        data-max="{{ filter.range_max | money_without_currency }}"
      >
      <label class="field__label hidden" for="{{ id_prefix }}{{ filter.label | escape }}-GTE">
        {{- 'products.facets.from' | t -}}
      </label>
    </div>

    <span class="field-currency hidden">{{ cart.currency.symbol }}</span>

    <div class="field">
      <input
        class="field__input range-max-input"
        name="{{ filter.max_value.param_name }}"
        id="{{ id_prefix }}{{ filter.label | escape }}-LTE"
        {%- if filter.max_value.value -%}
          value="{{ filter.max_value.value | money_without_currency }}"
        {%- endif -%}
        type="text"
        inputmode="decimal"
        placeholder="{{ filter.range_max | money_without_currency }}"
        data-pattern="\d| |,|\."
        data-min="0"
        data-max="{{ filter.range_max | money_without_currency }}"
      >
      <label class="field__label hidden" for="{{ id_prefix }}{{ filter.label | escape }}-LTE">
        {{- 'products.facets.to' | t -}}
      </label>
    </div>
  </div>
</div>
