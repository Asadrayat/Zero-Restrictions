<style>
    /* Swiper Styling */
    .--slider-wrapper {
      position: relative;
    }
    .--related-cart-products::before{
      position: absolute;
      display: block;
      content: "";
      width: calc(100% + 50px);
      height: .1rem;
      background: rgba(var(--color-foreground),.2);
      top: 0;
      left: -25px;
    }
    .--related-cart-products{
        position: relative;
        z-index: 0;
        padding-inline: 25px;
        box-sizing: border-box;
        /* border-top: .1rem solid rgba(var(--color-foreground),.2); */
        {% comment %} margin-bottom: 110px; {% endcomment %}
        {% comment %} margin-bottom: 200px; {% endcomment %}
        {% if embroidered_product_in_cart == true %}
          {% comment %} margin-bottom: 120px; {% endcomment %}
        {% endif %}  
        @media(max-width: 768px){
          {% comment %} margin-bottom: 180px; {% endcomment %}
        }

    h4.--segment-title.--related-cart-products-segment-title {
        margin: 0;
        padding-block: 16px;
    }
    .swiper:not(.swiper-initialized) .swiper-slide {
      max-width: calc(var(--page-width) / 4) !important;
      margin-right: 16px;
      overflow: hidden;
    }

    .--navigation-wrapper {
      position: relative;
      margin-block: 20px;
      display: flex;
      gap: 5px;
      align-items: center;
      justify-content: flex-start;
      @media(max-width: 768px){
        margin-block: 15px 10px;
      }
    }

    .--arrow-wrapper {
      display: flex;
      gap: 10px;
    }

    .--scrollbar-wrapper {
      position: relative;
    }

    .--nav-icon {
      width: 40px;
      height: 40px;
      min-width: 40px;
      min-height: 40px;
      display: flex;
      {% comment %} background: #fff; {% endcomment %}
      line-height: 1;
      top: 50%;
      z-index: 2;
      border-radius: 50%;
      align-items: center;
      justify-content: center;
      box-shadow: 0px 1px 2px -1px rgba(0, 0, 0, 0.1),
        0px 1px 3px 0px rgba(0, 0, 0, 0.1);
      cursor: pointer;
      user-select: none;
      transition: background 0.3s ease;
      @media(max-width: 768px){
        width: 30px;
        height: 30px;
        min-width: 30px;
        min-height: 30px;
      }
    }
   .--nav-icon svg{
     @media(max-width: 768px){
        width: 20px;
        height: 20px;
      }
   }
    /* Hover effect only on screens wider than 768px */
    {% comment %} @media (min-width: 769px) {
      .--nav-icon:hover {
        background: rgba(0, 0, 0, 0.32);
        color: #fff;
      }
    } {% endcomment %}

    /* Disabled state */
    .--nav-icon.swiper-button-disabled {
      opacity: 0.5;
      pointer-events: none;
    }

    /* Completely hide if locked and disabled */
    .--nav-icon.swiper-button-disabled.swiper-button-lock {
      display: none;
    }

    .prev-cart.--nav-icon {
      left: 0;
    }

    .next-cart.--nav-icon {
      right: 0;
    }

    .swiper-scrollbar-cart {
      position: relative !important;
      /* top: 19px; */
      left: 10px !important;
      bottom: unset !important;
      height: 2px !important;
      opacity: 1 !important;
      width: 300px !important;
      cursor: pointer;
      background: transparent;
    }

    @media (max-width: 600px) {
      .swiper-scrollbar-cart {
        width: 250px !important;
      }
    }

    .swiper-scrollbar-cart .swiper-scrollbar-drag {
      background: #00094b;
      display: block !important;
      height: 2px;
    }

    .swiper-scrollbar-cart::before {
      position: absolute;
      content: "";
      background: var(--swiper-scrollbar-bg-color, rgba(0, 0, 0, 0.1));
      top: 0;
      left: 0;
      width: 100%;
      height: 2px;
    }
  /* Upsell Card Styles : slider-in-cart snippet */
    h5.--card-title {
        margin-block: 0 8px;
        font-size: 16px;
        line-height: 20px;
  }
    .--upsell-product-wrapper{
       position: relative;
      display: grid;
      grid-template-columns: 1fr 4fr;
      gap: 20px;
      @media(max-width: 768px){
        grid-template-columns: 1fr 2fr;
      }
    }
  .--card-info {
      display: flex;
      flex-direction: column;
      justify-content: space-between;
  }
  .--card-price {
      /* margin-block: 8px; */
  }
  button.--upsell-button {
    color: #000;
      border: 1px solid #000;
      padding: 5px 10px;
      border-radius: 20px;
      max-width: max-content;
      transition: 0.5s ease;
  }
  .--upsell-product-wrapper:hover button.--upsell-button {
      color: #fff;
      background: #000;
  }

    }
</style>

<div class="--related-cart-products">
  <h4 class="--segment-title --related-cart-products-segment-title">You may also like</h4>
  <div class="swiper swiper-cart-slider">
    <div class="swiper-wrapper">
      {% assign card_count = 0 %}
      {% for cartUpsellProduct in upsell_collection.products limit: 20 %}
        {% assign hide_item = false %}
        {% for item in cart.items %}
          {% if item.product == cartUpsellProduct %}
            {% assign hide_item = true %}
            {% break %}
          {% endif %}
        {% endfor %}
        {% if product == cartUpsellProduct %}
          {% assign hide_item = true %}
        {% endif %}
        {% if hide_item == false and card_count < 8 %}
          {% assign card_count = card_count | plus: 1 %}
          <div class="swiper-slide">
            {% render 'cart-upsell-product-card', cartUpsellProduct: cartUpsellProduct %}
            {% # render 'card-product-new-v4', product: cartUpsellProduct %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>

  <div class="--navigation-wrapper">
    <div class="--arrow-wrapper">
      <div class="prev-cart --nav-icon" aria-label="Previous slide" role="button" tabindex="0">
        {% render 'all-icons', name: 'left_arrow' %}
      </div>
      <div class="next-cart --nav-icon" aria-label="Next slide" role="button" tabindex="0">
        {% render 'all-icons', name: 'right_arrow' %}
      </div>
    </div>

    <div class="swiper-scrollbar-cart swiper-scrollbar"></div>
    <div class="--scrollbar-wrapper"></div>
  </div>
</div>

