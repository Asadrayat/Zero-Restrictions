 <style>
  .--custom-size-option{
    border: none;
    margin: 0 !important;
    padding: 0 0 12px !important;
  }
  .p-info-mbl-size-label {
    color: #000;
    font-family: var(--font-family-Body, Archivo);
    font-size: var(--Font-Size-Paragraph-Small, 14px);
    font-style: normal;
    font-weight: 600;
    line-height: var(--Line-Height-Paragraph-Small, 20px);
    margin: 0;
  }
  .p-info-mbl-size-label--container{
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin: 0 0 8px;
  }
 </style>

<product-variant-picker class="">

{% if product.template_suffix == 'custom-logo-product' %}
  {% render 'ryder-cup-custom-content', section: section, product: product, block: block %}
{% endif %}

  {% for option in product.options_with_values %}
    {% assign option_name = option.name | downcase%}
    <div class="info-bg {% if block.settings.enable_mb %}mb{% endif %} {% if block.settings.enable_bb %}bb{% endif %} {% if option.name == 'Size' or option.name == 'size' %}--custom-size-option{% endif %} {% if option_name == 'color' and product.template_suffix == 'custom-logo-product'%}hidden{% endif %}">
      {% if option.name == 'Size' or option.name == 'size' %}
        <div class="p-info-size-sm pdp-lg">
          <div class="p-info-mbl-size-label--container">
            <p class="p-info-mbl-size-label">Size: <span class="--selected-size-value" style="font-weight: 400;">{{ option.selected_value | upcase }}</span></p>
            {% if block.settings.size_guide %}
              <div class="p-info-size-guide openPopup">
                <span>Size Guide</span>
              </div>
            {% endif %}
          </div>
          <button class="p-info-size-btn">
            <span class="p-info-selected-size">{{ option.selected_value | upcase }}</span>
            <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg" class="_icon_11egs_268" aria-hidden="true"><path d="m3.146 8.104.708-.708L12 15.543l8.146-8.147.708.708L12 16.957 3.146 8.104Z"></path></svg>
          </button>
        </div>
      {% endif %}
      <div class="p-info-variant-wrapper {% if option.name == 'Size' or option.name == 'size' %}pdp-sm{% endif %}">
        <p class="p-info-option-label"><span class="--option-name">{{ option.name }}:</span> {{ option.selected_value | upcase }}</p>
        {% if option.name == 'Size' or option.name == 'size' %}
          {% if block.settings.size_guide %}
            <div class="p-info-size-guide openPopup">
              {% comment %} <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 20 20" fill="none">
                <path d="M12.0832 4.58328L13.3332 5.83328M9.58322 7.08328L10.8332 8.33328M7.08322 9.58328L8.33322 10.8333M4.58322 12.0833L5.83322 13.3333M2.13793 14.638L5.36178 17.8619C5.52679 18.0269 5.6093 18.1094 5.70443 18.1403C5.78812 18.1675 5.87826 18.1675 5.96195 18.1403C6.05708 18.1094 6.13959 18.0269 6.30459 17.8619L17.8618 6.30472C18.0268 6.13971 18.1093 6.05721 18.1402 5.96207C18.1674 5.87838 18.1674 5.78824 18.1402 5.70455C18.1093 5.60942 18.0268 5.52691 17.8618 5.36191L14.6379 2.13805C14.4729 1.97304 14.3904 1.89054 14.2953 1.85963C14.2116 1.83244 14.1215 1.83244 14.0378 1.85963C13.9426 1.89054 13.8601 1.97304 13.6951 2.13805L2.13793 13.6952C1.97292 13.8602 1.89042 13.9428 1.8595 14.0379C1.83231 14.1216 1.83231 14.2117 1.8595 14.2954C1.89042 14.3905 1.97292 14.473 2.13793 14.638Z" stroke="black" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
              </svg> {% endcomment %}
              <span>Size Guide</span>
            </div>
          {% endif %}
        {% endif %}
      </div>
      <div
        class="
          p-info-variants-option
          {% if option.name == 'Color' or option.name == 'color' %}color-option{% endif %}
          {% if option.name == 'Size' or option.name == 'size' %}size-option{% endif %}
          {% if option.name == 'Size' or option.name == 'size' %}pdp-sm{% endif %}
        "
      >
        {% for value in option.values %}
          <div class="p-info-variant-value {% if value.variant.id == blank %}
                hidden
              {% endif %}">
            <input
              {% if value.selected %}
                checked
              {% endif %}
              {% unless value.available %}
                disabled-
              {% endunless %}
              {% if value.variant.id == blank %}
                disabled
              {% endif %}
              class="hidden"
              id="{{ option.position }}-{{ value.id }}-{{ forloop.index }}"
              type="radio"
              name="{{ option.name }}"
              data-variant="{{ value.variant.id | strip }}"
              data-url="{{ value.variant.url }}"
              value="{{ value.name }}"
              data-image-id="{{ value.variant.featured_media.id }}"
            >

            {% if option.name == 'Color' or option.name == 'color' %}
              {% liquid
                assign color_img = value.name | downcase | strip | replace: ' ', '-' | replace: '/', '-' | append: '.png'
              %}
              <label
                class="{% unless  value.available %}disabled{% endunless %}"
                for="{{ option.position }}-{{ value.id }}-{{ forloop.index }}"
              >
                <span
                  style="{% if color_img %}background-image: url('{{ color_img | file_img_url: "200x" }}');{% else %} background-color: {{ value.name | downcase }}{% endif %}"
                ></span>
                {% comment %} {% if value.variant.featured_image == blank %}
                  {% liquid
                    assign color_img = value.name | downcase | strip | replace: ' ', '-' | replace: '/', '-' | append: '.png'
                  %}
                  {{ color_img | file_img_url: '100x' | img_tag }}
                {% else %}
                  {{ value.variant.featured_image | image_url: width: 100 | image_tag }}
                {% endif %} {% endcomment %}
              </label>
            {% else %}
              <label
                class="{% unless  value.available %}disabled{% endunless %}"
                for="{{ option.position }}-{{ value.id }}-{{ forloop.index }}"
              >
                {% if value.available %}
                  {{ value.name }}
                {% else %}
                  <s>{{ value.name }}</s>
                {% endif %}
              </label>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    </div>
  {% endfor %}
</product-variant-picker>
