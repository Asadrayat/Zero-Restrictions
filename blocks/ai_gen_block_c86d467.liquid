{% doc %}
  @prompt
    vertical scrolling bar small height with a inline cta, section can have color option selector and rectangle border style cta
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-scroll-bar-{{ ai_gen_id }} {
    width: 100%;
    overflow: hidden;
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.bar_height }}px 0;
  }

  .ai-scroll-bar-wrapper-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 40px;
    animation: ai-scroll-{{ ai_gen_id }} {{ block.settings.scroll_speed }}s linear infinite;
    width: max-content;
  }

  .ai-scroll-bar-item-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 40px;
    white-space: nowrap;
  }

  .ai-scroll-bar-text-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    font-weight: {{ block.settings.text_weight }};
    margin: 0;
  }

  .ai-scroll-bar-cta-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_text_size }}px;
    font-weight: {{ block.settings.button_text_weight }};
    transition: all 0.3s ease;
  }

  .ai-scroll-bar-cta-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_bg_color }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_border_color }};
  }

  @keyframes ai-scroll-{{ ai_gen_id }} {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-scroll-bar-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.85 }}px;
    }

    .ai-scroll-bar-cta-{{ ai_gen_id }} {
      font-size: {{ block.settings.button_text_size | times: 0.85 }}px;
      padding: {{ block.settings.button_padding_vertical | times: 0.8 }}px {{ block.settings.button_padding_horizontal | times: 0.8 }}px;
    }
  }
{% endstyle %}

<scrolling-bar-{{ ai_gen_id }} class="ai-scroll-bar-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-scroll-bar-wrapper-{{ ai_gen_id }}">
    {% for i in (1..2) %}
      <div class="ai-scroll-bar-item-{{ ai_gen_id }}">
        {% if block.settings.text_1 != blank %}
          <p class="ai-scroll-bar-text-{{ ai_gen_id }}">{{ block.settings.text_1 }}</p>
        {% endif %}

        {% if block.settings.button_text != blank and block.settings.button_link != blank %}
          <a href="{{ block.settings.button_link }}" class="ai-scroll-bar-cta-{{ ai_gen_id }}">
            {{ block.settings.button_text }}
          </a>
        {% endif %}

        {% if block.settings.text_2 != blank %}
          <p class="ai-scroll-bar-text-{{ ai_gen_id }}">{{ block.settings.text_2 }}</p>
        {% endif %}

        {% if block.settings.text_3 != blank %}
          <p class="ai-scroll-bar-text-{{ ai_gen_id }}">{{ block.settings.text_3 }}</p>
        {% endif %}

        {% if block.settings.text_4 != blank %}
          <p class="ai-scroll-bar-text-{{ ai_gen_id }}">{{ block.settings.text_4 }}</p>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</scrolling-bar-{{ ai_gen_id }}>

<script>
  (function() {
    class ScrollingBar{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        const wrapper = this.querySelector('.ai-scroll-bar-wrapper-{{ ai_gen_id }}');
        
        this.addEventListener('mouseenter', () => {
          wrapper.style.animationPlayState = 'paused';
        });

        this.addEventListener('mouseleave', () => {
          wrapper.style.animationPlayState = 'running';
        });
      }
    }

    customElements.define('scrolling-bar-{{ ai_gen_id }}', ScrollingBar{{ ai_gen_id }});
  })();
</script>

