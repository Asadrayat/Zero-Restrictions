{% liquid
  assign id = section.id
%}

<style>
  #shopify-section-{{id}} {
    box-sizing: border-box;
    margin-top: {{section.settings.margin_top | append: 'px'}};
    margin-bottom: {{section.settings.margin_bottom | append: 'px'}};
    padding-top: {{section.settings.padding_top | append: 'px'}};
    padding-bottom: {{section.settings.padding_bottom | append: 'px'}};
    {% if section.settings.color == "light" %}
      background-color: inherit;
    {% else %}
      background-color: #000;
    {% endif %}
  }

  @media(max-width: 600px) {
    #shopify-section-{{id}} {
      margin-top: {{section.settings.margin_top_m | append: 'px'}};
      margin-bottom: {{section.settings.margin_bottom_m | append: 'px'}};
      padding-top: {{section.settings.padding_top_m | append: 'px'}};
      padding-bottom: {{section.settings.padding_bottom_m | append: 'px'}};
    }
  }
  #shopify-section-{{id}} {
    .wrapper-{{ id }}{
      {% if section.settings.max_width != blank %}
      max-width: {{ section.settings.max_width }}px;
      {% else %}
      max-width: 100%;
      {% endif %}
      margin: auto;
      display: flex;      
      flex-direction: column;
      gap: var(--Spacing-Container-sm, 16px);
      {% if section.settings.content_alignment == 'left' %}
        align-items: start;
      {% elsif section.settings.content_alignment == 'right' %}
        align-items: end;
      {% else %}
        align-items: center;
      {% endif %}
    }
    h2.title {
      margin: 0 0 8px;
      font-family: var(--font-heading-family);
      font-weight: 700;
    }
    .pretitle {
      {% if section.settings.color == "light" %}
        color: var(--Content-Base-main, #1F2937);
      {% else %}
        color: #F3F4F6;
      {% endif %}
      padding: 4px 8px;
      /* UI Controls/Contextual/tagline/small */
      font-family: var(--font-family-Body, Archivo);
      font-size: 16px;
      font-style: normal;
      font-weight: 500;
      line-height: 20px; /* 125% */
      letter-spacing: 0.96px;
      text-transform: uppercase;
      margin: 0 0 12px;
      border-radius: 8px;
      border: 1px solid rgba(255, 255, 255, 0.20);
      background: rgba(255, 255, 255, 0.10);
      @media(max-width: 768px) {
        {% comment %} width: max-content;
        margin: auto; {% endcomment %}
        text-align: center;
      }
    }
    .text-wrapper{
      width: 100%;
      display: flex;
      {% if section.settings.content_alignment == 'left' %}
        justify-content: start;
      {% elsif section.settings.content_alignment == 'right' %}
        justify-content: end;
      {% else %}
        justify-content: center;
      {% endif %}
    }
    .text{
      {% if section.settings.content_alignment == 'left' %}
        text-align: left;
      {% elsif section.settings.content_alignment == 'right' %}
        text-align: right;
      {% else %}
        text-align: center;
      {% endif %}
      color: var(--Content-Base-main, #1F2937);
      margin: 0;
      /* font-family: var(--font-family-Body, "Neue Plak"); */
      font-size: var(--Font-Size-Paragraph-Medium, 18px);
      font-style: normal;
      font-weight: 400;
      line-height: var(--Line-Height-Paragraph-Medium, 26px); /* 144.444% */
    }
    .richtext-wrapper *{
        {% if section.settings.color == "light" %}
          color: var(--Content-Base-main, #1F2937);
        {% else %}
          color: #F3F4F6;
        {% endif %}
        {% if section.settings.content_alignment == 'left' %}
          text-align: left;
        {% elsif section.settings.content_alignment == 'right' %}
          text-align: right;
        {% else %}
          text-align: center;
        {% endif %}
        margin: 0 0 16px;
    }
    .richtext-wrapper{
      p{
        {% if section.settings.color == "light" %}
          color: var(--Content-Base-main, #1F2937);
        {% else %}
          color: #F3F4F6;
        {% endif %}
        /* font-family: var(--font-family-Body, "Neue Plak"); */
        font-size: var(--Font-Size-Paragraph-Large, 20px);
        font-style: normal;
        font-weight: 400;
        line-height: var(--Line-Height-Paragraph-Large, 30px); /* 150% */
        margin: 0 0 var(--Spacing-Container-xs, 12px);
      }
      h2 {
        {% if section.settings.color == "light" %}
          color: var(--Content-Base-main, #1F2937);
        {% else %}
          color: #F3F4F6;
        {% endif %}
        text-align: center;
        font-family: var(--font-family-Title, Archivo);
        font-size: 32px;
        font-style: normal;
        font-weight: 500;
        line-height: 137.5% ; /* 137.5% */
        text-transform: capitalize;   
        @media(max-width: 768px) {
           font-size: 24px;
        }
      }
      h3{
        {% if section.settings.content_alignment == 'left' %}
          text-align: left;
        {% elsif section.settings.content_alignment == 'right' %}
          text-align: right;
        {% else %}
          text-align: center;
        {% endif %}
        {% if section.settings.color == "light" %}
          color: var(--Content-Base-main, #1F2937);
        {% else %}
          color: #F3F4F6;
        {% endif %}
        margin: 0;
        /* font-family: var(--font-family-Title, "Neue Plak"); */
        font-size: var(--Font-Size-Heading-H3, 24px);
        font-style: normal;
        font-weight: 400;
        line-height: var(--Line-Height-Heading-H3, 28px); /* 116.667% */
      }
      li {
        margin: 0 24px 16px;
        list-style: disc;
      }
    }
    .richtext-wrapper.small {
      li, p, a, span {
        font-family: var(--font-family-body);
        font-size: 12px;        
      }
    }  
    .richtext-wrapper.large {
      li, p, a, span {
        font-family: var(--font-family-body);
        font-size: 20px;        
      }
    }  
    .text-wrapper.small p{
        font-family: var(--font-family-body);
        font-size: 12px;        
    }  
    .text-wrapper.large p{
        font-family: var(--font-family-body);
        font-size: 20px;        
    }  
    .review-wrapper{
      max-width: 840px;
      display: flex;
      flex-direction: column;
      gap: var(--Spacing-Container-sm, 16px);
      @media(max-width: 768px){
        max-width: 313px;
      }
    }
    .review-bottom{
      display: flex;
      align-items: center;
      {% if section.settings.content_alignment == 'left' %}
        justify-content: start;
      {% elsif section.settings.content_alignment == 'right' %}
        justify-content: end;
      {% else %}
        justify-content: center;
      {% endif %}
    }
    .name{
      color: var(--Content-Base-main, #1F2937);
      text-align: center;
      margin: 0;
      /* font-family: var(--font-family-Body, "Neue Plak"); */
      font-size: 20px;
      font-style: normal;
      font-weight: 400;
      line-height: 24px; /* 120% */
      letter-spacing: 1.2px;
      text-transform: uppercase;
    }
    .name span{
      color: var(--Content-Base-main, #1F2937);
      margin: 0;
      /* font-family: var(--font-family-Body, "Neue Plak"); */
      font-size: var(--Font-Size-Paragraph-Regular, 16px);
      font-style: normal;
      font-weight: 400;
      line-height: var(--Line-Height-Paragraph-Regular, 24px);
      letter-spacing: normal;
      text-transform: capitalize;
    }
    .buttons-wrapper{
      width: 100%;
      display: flex;
      {% if section.settings.content_alignment == 'left' %}
        justify-content: start;
      {% elsif section.settings.content_alignment == 'right' %}
        justify-content: end;
      {% else %}
        justify-content: center;
      {% endif %}
    }
    .dark{
      cursor: pointer;
      color: #FFF;
      text-align: center;
      /* font-family: var(--font-family-Body, "Neue Plak"); */
      font-size: var(--Font-Size-UI-Controls-Control-Button-Regular, 20px);
      line-height: var(--Line-Height-UI-Controls-Control-Button-Regular, 20px);
      text-transform: capitalize;
      border-radius: var(--rounded-3xl, 24px);
      background: var(--Content-Base-main, #1F2937);
      display: inline-block;
      padding: var(--Spacing-Container-sm) var(--Spacing-Container-lg);
      max-width: max-content;
    }
    .light {
      cursor: pointer;
      display: inline-block;
      border-radius: var(--rounded-3xl);
      border: 2px solid var(--Content-Base-main, #1f2937);
      background: #eeedf7;
      padding: var(--Spacing-Container-sm) var(--Spacing-Container-lg);
      color: var(--Content-Base-main);
      text-align: center;
      /* font-family: var(--font-family-Body, "Neue Plak"); */
      font-size: var(--Font-Size-UI-Controls-Control-Button-Regular);
      font-style: normal;
      font-weight: 400;
      line-height: var(--Line-Height-UI-Controls-Control-Button-Regular);
      text-transform: capitalize;
      transition: all 0.4s;
    }
    .light:before,
    .light:after {
      content: unset !important;
    }
    .light:hover {
      background: #1f2937;
      color: #eeedf7;
    }
  }
</style>

<div class="sec-{{ id }}">
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <div class="wrapper-{{ id }}">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'text' -%}
            <div class="text-wrapper {{ block.settings.font_size }}">
              <p class="text">
                {{ block.settings.text }}
              </p>
            </div>
          {%- when 'title' -%}
            <h2 class="title
              ">
              {{ block.settings.title }}
            </h2>
          {%- when 'liquid' -%}
            <div class="liquid--{{ id }}">
              {{ block.settings.liquid }}
            </div>            
          {%- when 'pretitle' -%}
            <p class="pretitle
              ">
              {{ block.settings.text }}
            </p>
          {%- when 'richtext' -%}
            <div class="richtext-wrapper {{ block.settings.font_size }}">
              {{ block.settings.richtext }}
            </div>
          {%- when 'button' -%}
            <div class="buttons-wrapper">
              {% if block.settings.button_label != blank %}
                <a
                  href="{{ block.settings.button_link }}"
                  class="{% if block.settings.btn_color == 'light' %}--primary-button-style{% else %}--secondary-button-style{% endif %} button"
                >
                  {{- block.settings.button_label -}}
                </a>
              {% endif %}
            </div>
          {%- when 'review' -%}
            <div class="review-wrapper">
              <div class="richtext-wrapper">
                {{ block.settings.review_text }}
              </div>
              <div class="review-bottom">
                {% if block.settings.name != blank %}
                  <p class="name">
                    {{ block.settings.name }}
                    <span>{{ block.settings.designation }}</span>
                  </p>
                {% endif %}
              </div>
            </div>
        {% endcase %}
      {% endfor %}
    </div>
  </div>
</div>

