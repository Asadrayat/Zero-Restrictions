{% liquid
  assign id = section.id
%}

<style>
  #shopify-section-{{id}} {
    box-sizing: border-box;
    margin-top: {{section.settings.margin_top | append: 'px'}};
    margin-bottom: {{section.settings.margin_bottom | append: 'px'}};
    padding-top: {{section.settings.padding_top | append: 'px'}};
    padding-bottom: {{section.settings.padding_bottom | append: 'px'}};
  }

  @media(max-width: 768px) {
    #shopify-section-{{id}} {
      margin-top: {{section.settings.margin_top_m | append: 'px'}};
      margin-bottom: {{section.settings.margin_bottom_m | append: 'px'}};
      padding-top: {{section.settings.padding_top_m | append: 'px'}};
      padding-bottom: {{section.settings.padding_bottom_m | append: 'px'}};
    }
  }
  .heading-{{ id }}{
    margin: 0 0 24px;
  }
  .heading-{{ id }} h2{
    font-size: 20px;
    line-height: 24px;
    color: #000000;
    margin: 0;
  }
  .image-{{ id }}{
    margin: 0 0 24px;
  }
  .image-{{ id }} img{
    display: block;
    width: 100%;
    max-width: 500px;
    height: auto;
  }
  .texts-{{ id }} .text-item-{{ id }}{
    font-size: 14px;
    line-height: 20px;
    color: #4B5563;
  }
  .texts-{{ id }} .text-item-{{ id }}:not(:last-child){
    margin: 0 0 24px;
  }
  .texts-{{ id }} .text-item-{{ id }} span{
    font-size: 16px;
    line-height: 24px;
    color: #1F2937;
    font-weight: 600;
  }

  @media screen and (max-width: 768px){
    .heading-{{ id }} h2{
      font-size: 20px;
      line-height: 24px;
      color: #000000;
      margin: 0;
    }
    .texts-{{ id }} .text-item-{{ id }}{
      font-size: 13px;
      line-height: 20px;
      display: flex;
      flex-direction: column;
    }
    .texts-{{ id }} .text-item-{{ id }}:not(:last-child){
      margin: 0 0 16px;
    }
    .texts-{{ id }} .text-item-{{ id }} span{
      font-size: 14px;
      line-height: 20px;
    }

  }
</style>


<div class="sec-{{ id }}">
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <div class="wrapper-{{ id }}">
      {% if section.settings.title != blank %}
        <div class="heading-{{ id }}">
          <h2>{{ section.settings.title }}</h2>
        </div>
      {% endif %}
      {% if section.settings.image %}
        <div class="image-{{ id }}">
        {{ section.settings.image | image_url: width: section.settings.image.width | image_tag }}
        </div>
      {% endif %}
      {% if section.blocks.size > 0 %}
        <div class="texts-{{ id }}">
          {% for block in section.blocks %}
            {% if block.settings.title != blank and block.settings.text != blank %}
              <div class="text-item-{{ id }}">
                <span>{{ forloop.index }}. {{ block.settings.title }}:</span> {{ block.settings.text }}
              </div>
            {% endif %}
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "How To Measure",
    "settings": [
      {
        "type": "checkbox",
        "id": "full_width",
        "label": "Full Width Section",
        "default": true
