<div id="{{ section.settings.id_nav | downcase }}" class="sec-{{ id }}">
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <div class="wrapper-{{ id }}">
      <div class="--top-block">
        <div class="--text-content">
          <h2 class="--section-title">{{ section.settings.title }}</h2>
          <div class="--section-subtitle">{{ section.settings.subtitle }}</div>
        </div>
        <div class="--filter-labels-wrapper">
          {% for block in section.blocks %}
            <h3
              class=" --filter-title {% if forloop.first %} --active-collection {% endif %}"
              data-title="collection-{{ section.id }}-{{ block.id }} "
            >
              {{ block.settings.title }}
            </h3>
          {% endfor %}
        </div>
      </div>
      <div class="tabs__contents">
        {% for block in section.blocks limit: 1 %}
          <div
            class="--slider-wrapper- --static-container --tab-collection {% if forloop.first %} --active-collection {% endif %}"
          >
            <div class="swiper swiper-{{ section.id }}--{{ block.id }}">
              <div class="swiper-wrapper">
                {% for product in block.settings.collection.products limit: 1 %}
                  <div class="swiper-slide">
                    {% # render 'card-product-new-v2', product: product, forloop: forloop, class: '', block: block %}
                     {% comment %}
                    {% render 'card-product-new-v3',
                      product: product,
                      forloop: forloop,
                      class: 'swiper-slide',
                      block: block
                    %}
                  {% endcomment %}
                  {% render 'card-product-new-v4', product: product, forloop: forloop %}
                  </div>
                {% endfor %}
              </div>
            </div>
          </div>
        {% endfor %}
        {% for block in section.blocks %}
          <div
            class="--slider-wrapper swiper__container__ --tab-collection {% if forloop.first %} --active-collection {% endif %}"
            data-title="collection-{{ section.id }}-{{ block.id }}  "
          >
            <div class="swiper swiper-{{ section.id }}--{{ block.id }}">
              <div class="swiper-wrapper">
                {% for product in block.settings.collection.products limit: 8 %}
                  <div class="swiper-slide">
                    {% render 'card-product-new-v4', product: product, forloop: forloop %}
                  {% comment %}
                    {% render 'card-product-new-v3',
                      product: product,
                      forloop: forloop,
                      class: 'swiper-slide',
                      block: block
                    %}
                  {% endcomment %}
                    
                  </div>
                {% endfor %}
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
    {% for block in section.blocks %}
      <div class="--navigation-wrapper --scroll-wrappers {% if forloop.first %} --active-collection {% endif %}" data-title="collection-{{ section.id }}-{{ block.id }}  ">
        <div class="--arrow-wrapper">
          <div class="prev-{{ section.id }} --nav-icon prev-{{ section.id }}--{{ block.id }}">
            {% render 'all-icons', name: 'left_arrow' %}
          </div>
          <div class="next-{{ section.id }} --nav-icon next-{{ section.id }}--{{ block.id }}">
            {% render 'all-icons', name: 'right_arrow' %}
          </div>
        </div>
        <div class="swiper-scrollbar-{{ section.id }}  swiper-scrollbar-{{ section.id }}--{{ block.id }} swiper-scrollbar"></div>
        <div class="--scrollbar-wrapper"></div>
      </div>
    {% endfor %}
  </div>
</div>

<script>
  function setEqualHeightv2(collection, selector) {
    let divs = collection.querySelectorAll(selector);
    let max = 0;
  
    // First pass: Calculate the maximum height
    divs.forEach((div) => {
      // let height = div.clientHeight;
      let temp = window.getComputedStyle(div);
      let height = parseFloat(temp.getPropertyValue("height"));
      
      if (height > max) {
        {% comment %} console.log("Height: ", height, " Max: ", max) {% endcomment %}
        max = height;
      } else {
        {% comment %} console.log("Lesser Height: ", height, " Max: ", max) {% endcomment %}
      }
    });
  
    // Second pass: Set all divs to the max height
    divs.forEach((div) => {
      {% comment %} console.log( "Set  Max: ", max) {% endcomment %}
      div.style.height = `${max}px`;
    });
  }

  document.addEventListener('DOMContentLoaded', function() {

  // function initmySwiper(classname) {
  //   if(classname){
  //         new Swiper(classname, {
  //         slidesPerView: 1.2,
  //         spaceBetween: 12,
  //         autoHeight: true,
  //         navigation: {
  //           nextEl: '.next-{{ section.id }}',
  //           prevEl: '.prev-{{ section.id }}'
  //         },
  //         breakpoints: {
  //           600:{
  //             slidesPerView: 3,
  //             spaceBetween: 16
  //           }
  //         }
  //       });
  //   } else {
  //     console.log(" No class Found");
  //   }
  // }
  function initmySwiper(classname,prev,next,scroll) {
    if(classname){
          new Swiper(classname, {
          slidesPerView: 1.2,
          spaceBetween: 0,
          autoHeight: true,
          touchMoveStopPropagation: true,
          // touchStartPropagation: false,
          // preventClicks: true,
          // preventClicksPropagation: true,
          // slideToClickedSlide: false,
          // allowTouchMove: false,
          navigation: {
            nextEl: next ,
            prevEl: prev
          },
         scrollbar: {
          el: scroll,
          draggable: true,
          hide: true        
        }, 
          breakpoints: {
            600:{
              slidesPerView: 3,
              spaceBetween: 0
            }
          }
        });
    } else {
      console.log(" No class Found");
    }
  }

    {% for block in section.blocks %}
      initmySwiper(".swiper-{{ section.id }}--{{ block.id }}",".prev-{{ section.id }}--{{ block.id }}",".next-{{ section.id }}--{{ block.id }}",".swiper-scrollbar-{{ section.id }}--{{ block.id }}");
    {% endfor %}

      // window.addEventListener('resize', function() {
      //   {% for block in section.blocks %}
      //     // initmySwiper(".swiper-{{ section.id }}--{{ block.id }}");
      //     initmySwiper(".swiper-{{ section.id }}--{{ block.id }}",".prev-{{ section.id }}--{{ block.id }}",".next-{{ section.id }}--{{ block.id }}");
      //   {% endfor %}
      // });


      let tabCollections = document.querySelectorAll('.sec-{{ id }} .--tab-collection');
      let tabScroll = document.querySelectorAll('.sec-{{ id }} .--navigation-wrapper.--scroll-wrappers');
      let tabTitles = document.querySelectorAll('.sec-{{ id }} .--filter-title');
    
      tabTitles.forEach((title) => {
        title.addEventListener('click', () => {
          // Remove active class from all titles
          tabTitles.forEach((x) => x.classList.remove('--active-collection'));
          tabCollections.forEach((x) =>{
            x.classList.remove('--active-collection')
            if (x.dataset.title && title.dataset.title && x.dataset.title.trim() === title.dataset.title.trim()) {
                x.classList.add('--active-collection');
            }
          } );
          tabScroll.forEach((x) =>{
            x.classList.remove('--active-collection')
            if (x.dataset.title && title.dataset.title && x.dataset.title.trim() === title.dataset.title.trim()) {
                x.classList.add('--active-collection');
            }
          } );
          // Add active class to the clicked title
          title.classList.add('--active-collection');
        });
      });

        // Set Equal height to collections
          tabCollections.forEach((xcollec) =>{
            setEqualHeightv2(xcollection, ".product-card__details")
          } );
    

  });

  // Optional: Add an event listener to handle window resize events
</script>

