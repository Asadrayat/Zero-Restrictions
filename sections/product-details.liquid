<script>
window.initAccordion = function () {
  const faqIntros = document.querySelectorAll('[data-faq-title]');
  const faqContents = document.querySelectorAll('[data-faq-content]');

  const toggleAccordion = (faqIntro, faqContent) => {
    const isActive = faqIntro.classList.contains('active');

    // Toggle only the clicked accordion
    faqIntro.classList.toggle('active');
    faqContent.classList.toggle('active');
    faqContent.style.maxHeight = isActive ? '0' : `${faqContent.scrollHeight}px`;
    faqContent.setAttribute('aria-hidden', isActive ? 'true' : 'false');
    faqIntro.setAttribute('aria-expanded', isActive ? 'false' : 'true');
    {% comment %} yotpoWidgetsContainer.initWidgets(); {% endcomment %}
  };

  faqIntros.forEach((faqIntro, index) => {
    const faqContent = faqIntro.parentElement.querySelector('[data-faq-content]');

    // Set initial ARIA attributes
    faqIntro.setAttribute('aria-expanded', 'false');
    faqIntro.setAttribute('aria-controls', `faq-content-${index}`);
    faqContent.setAttribute('aria-hidden', 'true');
    faqContent.id = `faq-content-${index}`;

    // Click event
    faqIntro.addEventListener('click', () => toggleAccordion(faqIntro, faqContent));

    // Keyboard accessibility
    faqIntro.setAttribute('tabindex', '0');
    faqIntro.addEventListener('keydown', (e) => {
      if (e.key === 'Enter' || e.key === ' ') {
        e.preventDefault();
        toggleAccordion(faqIntro, faqContent);
      }
    });
  });

  // Open the first accordion by default
  if (faqIntros.length > 0) {
    const firstIntro = faqIntros[0];
    const firstContent = firstIntro.parentElement.querySelector('[data-faq-content]');
    firstIntro.classList.add('active');
    firstIntro.setAttribute('aria-expanded', 'true');
    firstContent.classList.add('active');
    firstContent.setAttribute('aria-hidden', 'false');
    firstContent.style.maxHeight = `${firstContent.scrollHeight}px`;

    const styleWithIntro = document.querySelector('#faq__wrapp--container [data-faq-title]');
    const styleWithContent = document.querySelector('#faq__wrapp--container [data-faq-content]');
    if(styleWithIntro){
      styleWithIntro.classList.add('active');
      styleWithIntro.setAttribute('aria-expanded', 'true');
      styleWithContent.classList.add('active');
      styleWithContent.setAttribute('aria-hidden', 'false');
      styleWithContent.style.maxHeight = `${styleWithContent.scrollHeight}px`;
    }
  }

  // Add event listener for the "Style With" link
  const styleWithLink = document.querySelector('.style--with--link-btn');
  if (styleWithLink) {
    styleWithLink.addEventListener('click', (e) => {
      const targetIntro = document.querySelector('#faq__wrapp--container [data-faq-title]');
      const targetContent = document.querySelector('#faq__wrapp--container [data-faq-content]');
      if (targetIntro && targetContent) {
        // Scroll to the accordion
        targetIntro.scrollIntoView({ behavior: 'smooth', block: 'start' });

        // Open the accordion if not already active
        if (!targetIntro.classList.contains('active')) {
          targetIntro.classList.add('active');
          targetContent.classList.add('active');
          targetContent.style.maxHeight = `${targetContent.scrollHeight}px`;
          targetContent.setAttribute('aria-hidden', 'false');
          targetIntro.setAttribute('aria-expanded', 'true');
        }
      }
    });
  }

  yotpoWidgetsContainer.initWidgets();
};

// Initialize when DOM is loaded
document.addEventListener('DOMContentLoaded', initAccordion);

