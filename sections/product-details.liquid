<script>
  document.addEventListener('DOMContentLoaded', function () {
    document.querySelectorAll('.--set-product').forEach((productCard) => {
      const form = productCard.querySelector('.product-form');
      const variantIdInput = form.querySelector('input[name="id"]');
      const button = productCard.querySelector('.--atc-button');
      const imageWrapper = productCard.querySelector('.--image-wrapper img');
      const priceWrapper = productCard.querySelector('.sec-{{ id }} .price-wrapper');
      const colorSwatches = productCard.querySelectorAll('.color-swatch');
      const sizeInputs = productCard.querySelectorAll('.size-radio');
      const sizeDisplay = productCard.querySelectorAll('.selected_value-display');
      const productData = JSON.parse(productCard.querySelector('[data-json-set-product]').textContent);

      function updateProductCard(variantId) {
        const variant = productData.variants.find((v) => v.id.toString() === variantId);
        if (!variant) return;

        variantIdInput.value = variant.id;
        button.textContent = variant.available ? 'Add to Bag' : 'Out of stock';
        button.disabled = !variant.available;
        if (variant.featured_image) {
          imageWrapper.src = variant.featured_image.src;
        }

        priceWrapper.innerHTML =
          variant.compare_at_price > variant.price
            ? `<span class="price-regular"><span class="price-sale">${Shopify.formatMoney(
                variant.price
              )}</span><span class="price-compare-at">${Shopify.formatMoney(variant.compare_at_price)}</span></span>`
            : `<span class="price-regular"><span class="price-standard">${Shopify.formatMoney(
                variant.price
              )}</span></span>`;
      }

      function getSelectedOptions() {
        const selectedColor = productCard.querySelector('.color-swatch--selected')?.dataset.colorValue;
        const selectedSize = productCard.querySelector('.size-radio:checked')?.dataset.sizeValue;
        return { color: selectedColor, size: selectedSize };
      }

      function findVariantByOptions(color, size) {
        return productData.variants.find((v) => {
          const options = v.options;
          return (color ? options.includes(color) : true) && (size ? options.includes(size) : true);
        });
      }

      function updateSizeOptions(selectedColor) {
        const sizeOptionIndex = productData.options.indexOf('Size');
        const colorOptionIndex = productData.options.indexOf('Color');

        if (sizeOptionIndex === -1 || colorOptionIndex === -1) return;

        const availableSizes = productData.variants
          .filter((v) => v.options[colorOptionIndex] === selectedColor && v.available)
          .map((v) => v.options[sizeOptionIndex]);

        sizeInputs.forEach((input) => {
          const sizeValue = input.dataset.sizeValue;
          const isAvailable = availableSizes.includes(sizeValue);
          const sizeVariant = productData.variants.find(
            (v) => v.options[colorOptionIndex] === selectedColor && v.options[sizeOptionIndex] === sizeValue
          );

          input.disabled = !isAvailable;
          const label = productCard.querySelector(`label[for="${input.id}"]`);
          if (label) {
            label.classList.toggle('size-radio--disabled', !isAvailable);
          }
          input.setAttribute('aria-label', isAvailable ? sizeValue : `${sizeValue} (Out of stock)`);
          if (sizeVariant) {
            input.dataset.variantId = sizeVariant.id;
            input.dataset.variantUrl = `/products/${productData.handle}?variant=${sizeVariant.id}`;
          }
          if (!isAvailable && input.checked) {
            input.checked = false;
            sizeDisplay.forEach((display) => (display.textContent = ''));
          }
        });

        const selectedOptions = getSelectedOptions();
        if (availableSizes.length > 0 && !selectedOptions.size) {
          const firstAvailableSize = Array.from(sizeInputs).find((input) => !input.disabled);
          if (firstAvailableSize) {
            firstAvailableSize.checked = true;
            sizeDisplay.forEach((display) => (display.textContent = firstAvailableSize.dataset.sizeValue));
            const variant = findVariantByOptions(selectedColor, firstAvailableSize.dataset.sizeValue);
            if (variant) updateProductCard(variant.id.toString());
          }
        }
      }

      colorSwatches.forEach((swatch) => {
        swatch.addEventListener('click', () => {
          if (swatch.disabled) return;
          productCard.querySelectorAll('.color-swatch').forEach((s) => s.classList.remove('color-swatch--selected'));
          swatch.classList.add('color-swatch--selected');
          const selectedOptions = getSelectedOptions();
          const variant = findVariantByOptions(selectedOptions.color, selectedOptions.size);
          if (variant) {
            updateProductCard(variant.id.toString());
          }
          updateSizeOptions(selectedOptions.color);
        });
      });

      sizeInputs.forEach((input) => {
        input.addEventListener('change', () => {
          sizeDisplay.forEach((display) => (display.textContent = input.dataset.sizeValue));
          const selectedOptions = getSelectedOptions();
          const variant = findVariantByOptions(selectedOptions.color, selectedOptions.size);
          if (variant) {
            updateProductCard(variant.id.toString());
          }
        });
      });
    });
  });
</script>

<script>
  function initAddToCartButtons() {
    document.querySelectorAll('.--set-product').forEach((card) => {
      const button = card.querySelector('.--atc-button');
      const form = card.querySelector('.product-form');

      if (button && form) {
        button.addEventListener('click', (event) => {
          event.preventDefault();
          handleProductFormSubmit(form);
        });
      }
    });
  }

  function handleProductFormSubmit(form) {
    const cartDrawer = document.querySelector('cart-drawer') || document.querySelector('cart-notification');
    const formData = new FormData(form);
    const variantId = formData.get('id');

    if (!variantId) {
      console.warn('Variant ID not found in form');
      return;
    }

    if (cartDrawer) {
      const sections = getSectionsToRender(cartDrawer);
      formData.append(
        'sections',
        sections.map((section) => section.id)
      );
      formData.append('sections_url', window.location.pathname);
    }

    fetch(`${window.Shopify.routes.root}cart/add.js`, {
      method: 'POST',
      body: formData,
    })
      .then((res) => res.json())
      .then((response) => {
        if (response.status) throw new Error(response.message);
        if (cartDrawer) {
          cartDrawer.renderContents(response);
          openCartDrawer();
        }
      })
      .catch((error) => {
        console.error('Error adding product to cart:', error);
      });
  }

  function getSectionsToRender(cartDrawer) {
    return typeof cartDrawer.getSectionsToRender === 'function' ? cartDrawer.getSectionsToRender() : [];
  }

  function openCartDrawer() {
    const cartDrawer = document.querySelector('cart-drawer');
    if (cartDrawer) {
      cartDrawer.classList.remove('is-empty');
      cartDrawer.open();
    }
  }

  initAddToCartButtons();

  document.addEventListener('DOMContentLoaded', () => {
    new Swiper('.--set-product-wrapper-{{ section.id }}', {
      slidesPerView: 1.4,
      spaceBetween: 10,
      navigation: {
        nextEl: '.next-{{ section.id }}',
        prevEl: '.prev-{{ section.id }}',
      },
      breakpoints: {
        600: {
          slidesPerView: 2,
          spaceBetween: 10,
        },
      },
    });
  });
</script>

