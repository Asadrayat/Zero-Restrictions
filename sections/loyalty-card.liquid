{% liquid
  assign id = section.id
%}

<style>
    #shopify-section-{{id}} {
      box-sizing: border-box;
      margin-top: {{section.settings.margin_top | append: 'px'}};
      margin-bottom: {{section.settings.margin_bottom | append: 'px'}};
      padding-top: {{section.settings.padding_top | append: 'px'}};
      padding-bottom: {{section.settings.padding_bottom | append: 'px'}};
      .page-width {
        max-width: 1160px;
      }
    }

    @media(max-width: 600px) {
      #shopify-section-{{id}} {
        margin-top: {{section.settings.margin_top_m | append: 'px'}};
        margin-bottom: {{section.settings.margin_bottom_m | append: 'px'}};
        padding-top: {{section.settings.padding_top_m | append: 'px'}};
        padding-bottom: {{section.settings.padding_bottom_m | append: 'px'}};
      }
    }

  .wrapper-{{ id }} {
      display: grid;
      grid-template-columns: repeat(2,1fr);
      align-items: center;
      @media(max-width: 600px) {
        grid-template-columns: 1fr;
        gap: var(--Spacing-Container-lg, 24px);
      }


  .--image-wrapper {
      line-height: 0;
      overflow: hidden;
      border-radius: 8px;
      @media(max-width: 600px) {
         /* grid-row: 1/2; */
       }
    img {
      width: 100%;
    {% if section.settings.image_size == 'adaptive' %}
      aspect-ratio: 2/3;
    {% endif %}
    }

  }

  .--text-block-container.--text-first {
      padding-right: var(--Spacing-Container-lg);
       @media(max-width: 600px) {
         padding-right: unset;
       }
  }
  .--text-block-container.--text-last {
      padding-left: var(--Spacing-Container-lg);
      @media(max-width: 600px) {
         padding-left: unset;
       }
  }
  .pretitle {
    color: #000;
    font-family: var(--font-family-Body, Archivo);
    font-size: var(--Font-Size-Paragraph-Small, 14px);
    font-style: normal;
    font-weight: 700;
    line-height: var(--Line-Height-Paragraph-Small, 20px); /* 142.857% */
    text-transform: uppercase;
    padding-block: 0 var(--Spacing-Container-xs);
    margin: 0;
  }
  h2.--title {
      margin-block: 0 var(--Spacing-Container-xs);
  }

  .--content {
      margin-block: var(--Spacing-Container-sm) var(--Spacing-Container-lg);
      color: #000;

      /* Paragraph/S */
      font-family: var(--font-family-Body, Archivo);
      font-size: var(--Font-Size-Paragraph-Small, 14px);
      font-style: normal;
      font-weight: 400;
      line-height: var(--Line-Height-Paragraph-Small, 20px); /* 142.857% */
    h3 {
      color: #000;

      /* UI Controls/Contextual/tagline/small */
      font-family: var(--font-family-Body, Archivo);
      font-size: 16px;
      font-style: normal;
      font-weight: 500;
      line-height: 20px; /* 125% */
      letter-spacing: 0.96px;
      text-transform: uppercase;
    }
  }
  .--content * {
    margin: 0 0 8px;
  }

  .product__wrapper {
      display: grid;
      grid-template-columns: 1fr 1fr;
  }


  .pd__block {
      position: relative;
  }
  a.absolute_link {
      width: 100%;
      height: 100%;
      position: absolute;
      display: block;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      cursor: pointer;
  }
   p.pd__title {
      color: #1F2937;
      text-align: center;
      margin-top: 12px;
  }




  }
</style>

<div class="sec-{{ id }}">
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <div class="wrapper-{{ id }}">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'image' %}
            <div class="--image-wrapper">
              {% unless block.settings.image == blank %}
                {{ block.settings.image | image_url: width: block.settings.image.width | image_tag }}
              {% else %}
                {{ 'image' | placeholder_svg_tag }}
              {% endunless %}
            </div>
          {% when 'text' %}
            <div class="--text-block-container {% if forloop.first %} --text-first {% else %}--text-last{% endif %}">
              <h2 class="--title">{{ block.settings.title }}</h2>
              {% unless block.settings.pretitle == blank %}
                <p class="pretitle">{{ block.settings.pretitle }}</p>
              {% endunless %}
              <div class="--content">{{ block.settings.content }}</div>
              {% if block.settings.product or block.settings.product1 %}
                {% assign product1 = block.settings.product %}
                {% assign product2 = block.settings.product1 %}
                <div class="product__wrapper">
                  <div class="pd__block">
                    <a class="absolute_link" href="{{ product1.url }}"></a>
                    <div class="pd_image__wrap">
                      {% if block.settings.cm1 %}
                        {{- block.settings.cm1 | image_url: width: block.settings.cm1.width | image_tag -}}
                      {% else %}
                        {% if product1.featured_image -%}
                          {{- product1.featured_image | image_url: width: product1.featured_image.width | image_tag -}}
                        {%- else -%}
                          {{- 'product-1' | placeholder_svg_tag -}}
                        {%- endif %}
                      {% endif %}
                    </div>
                    <p class="pd__title">{{ product1.title }}</p>
                  </div>
                  <div class="pd__block">
                    <a class="absolute_link" href="{{ product2.url }}"></a>
                    <div class="pd_image__wrap">
                      {% if block.settings.cm2 %}
                        {{- block.settings.cm2 | image_url: width: block.settings.cm2.width | image_tag -}}
                      {% else %}
                        {% if product2.featured_image -%}
                          {{- product2.featured_image | image_url: width: product2.featured_image.width | image_tag -}}
                        {%- else -%}
                          {{- 'product-2' | placeholder_svg_tag -}}
                        {%- endif %}
                      {% endif %}
                    </div>
                    <p class="pd__title">{{ product2.title }}</p>
                  </div>
                </div>
              {% endif %}
            </div>
        {% endcase %}
      {% endfor %}
    </div>
  </div>
</div>

