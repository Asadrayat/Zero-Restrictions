        },
        {
          "type": "text",
          "id": "pretitle",
          "label": "Pretitle",
          "default": "33.50 USD"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "Content"
        },
        {
          "type": "header",
          "content": "Products"
        },
        {
          "type": "product",
          "id": "product",
          "label": "Product 1"
        },
        {
          "type": "image_picker",
