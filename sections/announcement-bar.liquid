{% liquid
  assign id = section.id
%}

<style>
  #shopify-section-{{id}} {
    box-sizing: border-box;
    margin-top: {{section.settings.margin_top | append: 'px'}};
    margin-bottom: {{section.settings.margin_bottom | append: 'px'}};
    padding-top: {{section.settings.padding_top | append: 'px'}};
    padding-bottom: {{section.settings.padding_bottom | append: 'px'}};
    {% if section.settings.background != blank %}
      background-color: {{ section.settings.background }};
    {% endif %}
    z-index: 3;
    position: relative;
    .swiper:not(.swiper-initialized), .swiper:not(.swiper-initialized) .swiper-slide, .swiper:not(.swiper-initialized) .nav__swipe, .swiper:not(.swiper-initialized) .announce__text-block swiper-loaded {
        overflow: hidden;
        visibility: hidden;
      }
  }

  @media(max-width: 768px) {
    #shopify-section-{{id}} {
      margin-top: {{section.settings.margin_top_m | append: 'px'}};
      margin-bottom: {{section.settings.margin_bottom_m | append: 'px'}};
      padding-top: {{section.settings.padding_top_m | append: 'px'}};
      padding-bottom: {{section.settings.padding_bottom_m | append: 'px'}};
    }
  }
  .wrapper-{{ id }} {
    position: relative;
  }
  .wrapper-{{ id }} .announce__text-block.swiper-loaded {
    max-width: 750px;
    margin: auto;
    position: relative;
  }
  .wrapper-{{ id }} .announcement__menu {
    position: absolute;
    top: 50%;
    right: 0;
    transform: translatey(-50%);
    width: max-content;
    z-index: 2;
    display: flex;
    align-items: center;
    @media(max-width: 768px) {
      display: none;
    }
    a, span {
      color: #fff;
      font-size: 14px;
      line-height: 140%;
    }
    span {
      margin: 0 4px;
    }
  }

  .sec-{{ id }} .swiper {
    margin: 0 30px;
  }
  .sec-{{ id }} .swiper-wrapper{
    -webkit-transition-timing-function:linear!important;
    transition-timing-function:linear!important;
    position: relative;
  }
  .sec-{{ id }} .swiper-slide{
    width: auto;
    position: relative;
  }
  .sec-{{ id }} .swiper-slide a{
    text-align: center;
    font-family: var(--font-family-Body);
    font-size: var(--Font-Size-Paragraph-Tiny);
    line-height: var(--Line-Height-Paragraph-Tiny); /* 133.333% */
    text-transform: uppercase;
    text-decoration: none;
    color: {{ section.settings.color }};
    margin-inline: auto;
    max-width: fit-content;
    display: block;
  }
  .sec-{{ id }} .nav__swipe {
      position: absolute;
      width: 100%;
      height: 100%;
      top: 50%;
      transform: translatey(-50%);
      width: max-content;
      height: max-content;
      cursor: pointer;
    &:before {
      content: unset;
    }
    &:after {
      content: unset;
    }
    path {
      stroke: #ffff;
    }
  }
  @keyframes line-slide {
    0% {
      background-position: -5% 0;
    }
    100% {
      background-position: 100% 0;
    }
  }
  #slider-prev--{{ section.id }} {
      left: 0;
      svg {
        rotate: 90deg;
      }      
  }
  #slider-next--{{ section.id }} {
      right: 0;
      svg {
        rotate: -90deg;
      }
  }
</style>

<div class="sec-{{ id }} section__annoucement">
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <div class="wrapper-{{ id }}">
      <div class="announce__text-block">
        {% if section.blocks.size > 1 %}
          <div class=" nav__swipe" id="slider-prev--{{ section.id }}">
            <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
              <path d="M3.33301 6L7.99967 10.6667L12.6663 6" stroke="black" stroke-width="1.33333" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>
        {% endif %}
        <div class="swiper">
          <div class="swiper-wrapper">
            {% for i in (1..15) %}
              {% for block in section.blocks %}
                <div class="swiper-slide">
                  {% if block.settings.title != blank %}
                    <a href="{{ block.settings.link | default: '#' }}">{{ block.settings.title }}</a>
                  {% endif %}
                </div>
              {% endfor %}
            {% endfor %}
          </div>
        </div>
        {% if section.blocks.size > 1 %}
          <div class=" nav__swipe" id="slider-next--{{ section.id }}">
            <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
              <path d="M3.33301 6L7.99967 10.6667L12.6663 6" stroke="black" stroke-width="1.33333" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>
        {% endif %}
      </div>

      <div class="announcement__menu">
        {% unless section.settings.label == blank %}
          <a href="{{ section.settings.url }}">{{ section.settings.label }}</a>
          <span> | </span>
        {% endunless %}
        {% unless section.settings.label1 == blank -%}          
          <a href="{{ section.settings.url1 }}">{{ section.settings.label1 }}</a>
          <span> | </span>
        {% endunless %}
        {% unless section.settings.label2 == blank -%}          
          <a href="{{ section.settings.url2 }}">{{ section.settings.label2 }}</a>
        {% endunless %}
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    new Swiper('.wrapper-{{ id }} .swiper', {
    {% comment %} autoplay: true,
    autoplay: {
        delay: 3000,
        disableOnInteraction: true,
    }, {% endcomment %}
    speed: 500,
    slidesPerView: 1,
    effect: "fade",
    loop: false,
    fadeEffect: {
      crossFade: true,
    },
    {% if section.blocks.size > 1 %}
      navigation: {
        nextEl: "#slider-next--{{ section.id }}",
        prevEl: "#slider-prev--{{ section.id }}",
      }
    {% endif %}
    });
  });
  {% comment %} document.addEventListener("DOMContentLoaded", function () {
    new Swiper('.wrapper-{{ id }} .swiper', {
        spaceBetween: 50,
        centeredSlides: true,
        speed: 4000,
        autoplay: {
          delay: 1,
        },
        loop: true,
        slidesPerView:'auto',
        allowTouchMove: false,
        disableOnInteraction: true
    });
  }); {% endcomment %}
</script>

