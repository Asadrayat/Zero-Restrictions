{% liquid
  assign id = section.id
%}

<style>
    #shopify-section-{{id}} {
      box-sizing: border-box;
      margin-top: {{section.settings.margin_top | append: 'px'}};
      margin-bottom: {{section.settings.margin_bottom | append: 'px'}};
      padding-top: {{section.settings.padding_top | append: 'px'}};
      padding-bottom: {{section.settings.padding_bottom | append: 'px'}};
    }
    .wrapper-{{ id }} .image-wrap img {
      width: 100%;
      object-fit: cover;
    }
    .wrapper-{{ id }} .image-wrap.original img {
      height: auto;
    }
    .wrapper-{{ id }} .image-wrap.adaptive img {
      height: auto;
      aspect-ratio: 4/1;
      @media(max-width: 1280px) {
        aspect-ratio: 4/1;
      }
      @media(max-width: 600px) {
        aspect-ratio: unset;
        height: calc(100svh - 108px);
      }
    }

    .wrapper-{{ id }} .block__wrapper {
      position: relative;
    }
    .wrapper-{{ id }} .content__wrapper  {
      /* position: absolute;
      width: 100%;
      height: 100%;
      padding: var(--Spacing-Container-lg);
      top: 0;
      left: 0;
      box-sizing: border-box; */

      position: absolute;
      width: 100%;
      height: 100%;
      padding: var(--Spacing-Container-lg);
      top: 0;
      left: 50%;
      box-sizing: border-box;
      transform: translateX(-50%);

    }
    .wrapper-{{ id }} .content {
      display: flex;
      width: 100%;
      height: 100%;
      flex-direction: column;
    }
    .wrapper-{{ id }} .content__info {
      display: flex;
      flex-direction: column;
    }
    .wrapper-{{ id }} .block__wrapper p.pretitle {
      /* color: var(--Content-Base-main); */
      /* text-align: center; */
      /* UI Controls/Contextual/tagline/small */
      font-family: var(--font-family-Body);
      font-size: 16px;
      font-style: normal;
      font-weight: 400;
      line-height: 125%;
      letter-spacing: 0.96px;
      text-transform: uppercase;
      margin: 0 0 8px 0;
    }
    .wrapper-{{ id }} .block__wrapper h1 {
      /* color: var(--Content-Base-main); */
      /* text-align: center; */
      font-style: normal;
      font-weight: 400;
      line-height: var(--Line-Height-Heading-H1);
      letter-spacing: -0.48px;
      margin: 0 0 8px 0;
      em{
        display: block;
        font-style: normal;
      }
    }
    .wrapper-{{ id }} .block__wrapper h1.heading-medium {
      font-size: var(--Font-Size-Heading-H1);
    }
    .wrapper-{{ id }} .block__wrapper h1.heading-large {
      font-size: 96px;
      font-family: var(--font-family-Title);
      line-height: 83%;
      @media(max-width: 768px) {
        font-size: 64px;
      }
    }
    .wrapper-{{ id }} .block__wrapper p {
      /* text-align: center;s */
      /* Paragraph/XL */
      font-family: var(--font-family-Body, "Neue Plak");
      font-size: var(--Font-Size-Paragraph-Large);
      font-style: normal;
      font-weight: 400;
      line-height: var(--Line-Height-Paragraph-Large); /* 150% */
      margin: 0;
    }
    .bs__nav_icon {
        width: 40px;
        height: 40px;
        display: flex;
        background: #fff;
        line-height: 1;
        position: absolute;
        top: 50%;
        z-index: 1;
        border-radius: 50%;
        align-items: center;
        justify-content: center;
        transform: translateY(-50%);
        box-shadow: 0px 1px 2px -1px rgba(0, 0, 0, 0.10), 0px 1px 3px 0px rgba(0, 0, 0, 0.10);
        cursor: pointer;
       @media(max-width: 600px) {
         display: none;
       }
    }
    .bs__nav_icon svg path {
      stroke: #000;
    }
    .bs__nav_icon.swiper-button-disabled {
        display: none;
    }
    .prev-{{ section.id }}.bs__nav_icon {
      left: 0;
      transform: translateX(-50px);
    }
    .next-{{ section.id }}.bs__nav_icon {
      right: 0;
      transform: translateX(50px);
    }
    .wrapper-{{ id }}:hover .prev-{{ section.id }} {
      transform: translateX(16px);
    }
    .wrapper-{{ id }}:hover .next-{{ section.id }} {
      transform: translateX(-16px);
    }
  @media(max-width: 768px) {
    #shopify-section-{{id}} {
      margin-top: {{section.settings.margin_top_m | append: 'px'}};
      margin-bottom: {{section.settings.margin_bottom_m | append: 'px'}};
      padding-top: {{section.settings.padding_top_m | append: 'px'}};
      padding-bottom: {{section.settings.padding_bottom_m | append: 'px'}};
    }
    .static__mobile-position {
      position: relative !important;
      transform: unset !important;
      top: unset !important;
      left: unset !important;
      margin: auto;
    }
  }
</style>

<div class="sec-{{ id }}">
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <div class="wrapper-{{ id }}">
      <div class="swiper slideshow__section_wrap_">
        <div class="swiper-wrapper">
          {% for block in section.blocks %}
            {% assign image = block.settings.image %}
            {% assign image_mobile = block.settings.image_mobile %}
            {% assign pretitle = block.settings.pretitle %}
            {% assign title = block.settings.title %}
            {% assign subtitle = block.settings.subtitle %}
            {% assign button_label_primary = block.settings.btn_label1 %}
            {% assign button_url_primary = block.settings.btn_url1 %}
            {% assign button_label_secondary = block.settings.btn_label2 %}
            {% assign button_url_secondary = block.settings.btn_url2 %}
            <div class="swiper-slide">
              {% render 'hero-styles', block: block, section: section %}
              <div class="block__wrapper block__wrapper-{{ section.id }}-{{ block.id }}">
                {% if image %}
                  <div class="image-wrap {{ section.settings.banner_height }} {% if image_mobile %}small-hide{% endif %}">
                    {{ image | image_url: width: image.width | image_tag }}
                  </div>
                {% else %}
                  <div class="image-wrap  {{ section.settings.banner_height }} {% if image_mobile %}small-hide{% endif %}">
                    {{ 'hero-apparel-2' | placeholder_svg_tag: 'placeholder-svg' }}
                  </div>
                {% endif %}
                {% if image_mobile %}
                  <div class="image-wrap  large-up-hide medium-hide {{ section.settings.banner_height }}">
                    {{ image_mobile | image_url: width: image_mobile.width | image_tag }}
                  </div>
                {% else %}
                  <div class=" large-up-hide medium-hide">
                    {{ 'hero-apparel-2' | placeholder_svg_tag: 'placeholder-svg' }}
                  </div>
                {% endif %}
                <div class="content__wrapper page-width">
                  <div class="content  {{ block.settings.content_position }} mobile-{{ block.settings.content_position_m }}">
                    <div class="content__info">
                      {% if pretitle != blank %}
                        <p class="pretitle info-{{ block.id }} {{ block.settings.info_align }} mobile-{{ block.settings.info_align_m }}">
                          {{ pretitle | escape }}
                        </p>
                      {% endif %}
                      {% if title != blank %}
                        <h1 class="info-{{ block.id }} heading-{{ block.settings.heading_size }} {{ block.settings.info_align }} mobile-{{ block.settings.info_align_m }}">
                          {{ title }}
                        </h1>
                      {% endif %}
                      {% if subtitle != blank %}
                        <p class="info-{{ block.id }} {{ block.settings.info_align }} mobile-{{ block.settings.info_align_m }}">
                          {{ subtitle | escape }}
                        </p>
                      {% endif %}
                      {% if button_label_primary != blank or button_label_secondary != blank %}
                        <div class="btn__wrapper justify-{{ block.settings.info_align }} mobile-justify-{{ block.settings.info_align_m }}">
                          {% if button_label_primary != blank %}
                            <a class="button" href="{{ button_url_primary }}">{{ button_label_primary }}</a>
                          {% endif %}
                          {% if button_label_secondary != blank %}
                            <a class="button" href="{{ button_url_secondary }}">{{ button_label_secondary }}</a>
                          {% endif %}
                        </div>
                      {% endif %}
                    </div>
                  </div>
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
        {% if section.settings.show_arrow %}
          <div class="prev-{{ section.id }} bs__nav_icon">
            {% render 'all-icons', name: 'left_arrow' %}
          </div>
          <div class="next-{{ section.id }} bs__nav_icon">
            {% render 'all-icons', name: 'right_arrow' %}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    new Swiper(".wrapper-{{ id }} .swiper", {
      slidesPerView: 1,
      loop: true,
      autoHeight: true,
      navigation: {
        nextEl: '.next-{{ section.id }}',
        prevEl: '.prev-{{ section.id }}'
      },
      {% if section.settings.enable_autoslide %}
        autoplay: {
          delay: 5000,
          disableOnInteraction: false
        },
      {% endif %}
      effect: "fade"
    });
  });
</script>

