{% liquid
  assign id = section.id
%}

<style>
      #shopify-section-{{id}} {
        box-sizing: border-box;
        margin-top: {{section.settings.margin_top | append: 'px'}};
        margin-bottom: {{section.settings.margin_bottom | append: 'px'}};
        padding-top: {{section.settings.padding_top | append: 'px'}};
        padding-bottom: {{section.settings.padding_bottom | append: 'px'}};
        overflow: hidden;
        {% if section.settings.color == "light" %}
          background-color: inherit;
        {% else %}
          background-color: #000;
        {% endif %}
      }

      @media(max-width: 768px) {
        #shopify-section-{{id}} {
          margin-top: {{section.settings.margin_top_m | append: 'px'}};
          margin-bottom: {{section.settings.margin_bottom_m | append: 'px'}};
          padding-top: {{section.settings.padding_top_m | append: 'px'}};
          padding-bottom: {{section.settings.padding_bottom_m | append: 'px'}};
        }
      }
      #shopify-section-{{id}}{
        .top-wrapper {
           margin: 0 0 var(--Spacing-Container-lg);
          display: flex;
          flex-direction: column;
          align-items: {{ section.settings.alignment_heading }};           
        }     
        .title{
          max-width: 544px;
          color: var(--Content-Base-main);
          /* font-family: var(--font-family-Title, "Neue Plak"); */
          font-size: var(--Font-Size-Heading-H2);
          font-style: normal;
          font-weight: 700;
          line-height: var(--Line-Height-Heading-H2);
          letter-spacing: -0.4px;
          text-transform: capitalize;
          margin: 0;
          {% if section.settings.subtitle != blank %}
            margin: 0 0 8px;
          {% endif %}
          {% if section.settings.color == "light" %}
            color: var(--Content-Base-main);
          {% else %}
            color: var(--Content-Inverted-main);
          {% endif %}
        }
        .subtitle {
          margin: 0;
          line-height: 120%;
          {% if section.settings.color == "light" %}
            color: var(--Content-Base-main);
          {% else %}
            color: var(--Content-Inverted-main);
          {% endif %}          
        }
        .card-grid-container{
          display: grid;
          grid-template-columns: repeat(3, minmax(0,1fr));
          gap: var(--Spacing-Container-sm, 16px);
          @media(max-width: 768px){
            grid-template-columns: minmax(0,1fr);
          }
        }
        /* Swiper Navigation */
        .collection-list-wrapper{
          position: relative;
        }
        .swiper-button-next:after,
        .swiper-button-prev:after {
          content: 'none';
        }
        .swiper-button-next.swiper-button-disabled, .swiper-button-prev.swiper-button-disabled{
          display: none!important;
        }
        #slider-next--{{ section.id }} {
          color: #000;
          width: 40px;
          height: 40px;
          position: absolute;
          right: 0;
          top: 50%;
          display: flex;
          padding: 8px;
          align-items: center;
          border-radius: var(--rounded-full, 999999px);
          background: #FFF;
          box-shadow: 0px 1px 2px -1px rgba(0, 0, 0, 0.10), 0px 1px 3px 0px rgba(0, 0, 0, 0.10);
          transform: translateX(50%);
          z-index: 2;
          @media(max-width: 768px){
            transform: unset;
          }
        }
        #slider-next--{{ section.id }} svg{
          width: 24px;
          height: 24px;
        }
       #slider-prev--{{ section.id }}{
          color: #000;
          width: 40px;
          height: 40px;
          position: absolute;
          left: 0;
          top: 50%;
          display: flex;
          padding: 8px;
          align-items: center;
          border-radius: var(--rounded-full, 999999px);
          background: #FFF;
          box-shadow: 0px 1px 2px -1px rgba(0, 0, 0, 0.10), 0px 1px 3px 0px rgba(0, 0, 0, 0.10);
          transform: translateX(-50%);
          z-index: 2;
          @media(max-width: 768px){
            transform: unset;
          }
       }
       #slider-prev--{{ section.id }} svg{
          width: 24px;
          height: 24px;
       }
      .swiper:not(.swiper-initialized) .swiper-slide {
          max-width: calc(var(--page-width)/{{ section.settings.slides_per_view }}) !important;
          margin-right: 16px;
          overflow: hidden;
          @media(max-width: 768px){
            max-width: calc(var(--page-width)/{{ section.settings.slides_per_view_mbl }}) !important;
          }
      }
    }



  .sec-{{ id }}{
  .--navigation-wrapper {
          position: relative;
          margin-block: 20px;
          display: flex;
          gap: 5px;
        }
      .--arrow-wrapper {
          display: flex;
          gap: 10px;

      }

      .--scrollbar-wrapper{
        position: relative;
      }

     .--nav-icon {
          width: 40px;
          height: 40px;
          display: flex;
         {% if section.settings.color == "light" %}
            background: #000;
            svg path {
              stroke: #fff;
            }
           {% else %}
            background: #ffffffd1;
           {% endif %}

          line-height: 1;
          /* position: absolute; */
          top: 50%;
          z-index: 1;
          border-radius: 50%;
          align-items: center;
          justify-content: center;
          /* transform: translateY(-50%); */
          box-shadow: 0px 1px 2px -1px rgba(0, 0, 0, 0.10), 0px 1px 3px 0px rgba(0, 0, 0, 0.10);
          cursor: pointer;
          z-index: 2;
      }

     {% if section.settings.color == "light" %}
            .--nav-icon:hover {
              {% comment %} background: #fff;
              svg path {
                fill: #000;
              } {% endcomment %}
              @media(min-width: 769px){
               background: #fff;
                svg path {
                  stroke: #000;
                }
              }
            }
      {% else %}
          .--nav-icon:hover {
            @media(min-width: 769px){
              background: #fff;
            }
          }
        {% endif %}


      .--nav-icon.swiper-button-disabled {
          /* display: none; */
          opacity: 0.5;
      }
      .--nav-icon.swiper-button-disabled.swiper-button-lock {
         display: none;
      }

  .swiper-scrollbar-{{ section.id }} {
        position: relative !important;
        top: 19px;
        left: 10px !important;
        bottom: unset !important;
        /* margin: var(--Spacing-Container-xl) 0 0 0; */
        height: 2px !important;
        opacity: 1 !important;
        width: 300px !important;
        cursor: pointer;
        /* padding-block: 8px; */
        {% if section.settings.color == "light" %}
          background: transparent;
        {% else %}
          background: #ffffff59;
        {% endif %}

        @media(max-width: 600px){
          width: 250px !important;
        }


        .swiper-scrollbar-drag {

          {% if section.settings.color == "light" %}
           background: #00094b;
          {% else %}
            background: #fff;
          {% endif %}
          display: block !important;
          height: 2px;
        }
      }
      .swiper-scrollbar-{{ section.id }}::before {
        position: absolute;
        content: "";
        background: var(--swiper-scrollbar-bg-color, rgba(0, 0, 0, .1));
        top: 0;
        left: 0;
        width: 100%;
        height: 2px;
      }

  }
</style>

<div class="sec-{{ id }}" id="collection-list--{{ id }}">
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <div class="wrapper-{{ id }}">
      <div class="top-wrapper">
        {% if section.settings.title != blank %}
          <h2 class="title {{ section.settings.alignment_heading }}">{{ section.settings.title }}</h2>
        {% endif %}
        {% if section.settings.subtitle != blank %}
          <p class="subtitle {{ section.settings.alignment_heading }}">{{ section.settings.subtitle }}</p>
        {% endif %}
      </div>
      <div class="collection-list-wrapper">
        {% if section.settings.enable_slider == true %}
          <div class="swiper swiper-{{ section.id }}">
            <div class="swiper-wrapper">
              {% for block in section.blocks %}
                <div class="swiper-slide">
                  {% if block.type == 'collection' %}
                    {% render 'card-collection',
                      card_collection: block.settings.collection,
                      name: block.settings.collection_name,
                      content: block.settings.content,
                      image: block.settings.collection_image,
                      show_arrow: section.settings.show_arrow
                      block: block
                    %}
                  {% else %}
                    {% render 'card-collection',
                      url: block.settings.url,
                      step: block.settings.step,
                      name: block.settings.name,
                      content: block.settings.content,
                      image: block.settings.image,
                      show_arrow: section.settings.show_arrow
                      block: block
                    %}
                  {% endif %}
                </div>
              {% endfor %}
            </div>
          </div>
          {% comment %}
              <div class="swiper-button-next" id="slider-next--{{ section.id }}">
              {% render 'all-icons', name: 'right_arrow' %}
            </div>
            <div class="swiper-button-prev" id="slider-prev--{{ section.id }}">
              {% render 'all-icons', name: 'left_arrow' %}
            </div>
          {% endcomment %}

        {% else %}
          <div class="card-grid-container">
            {% for block in section.blocks %}
              <div class="card-grid">
                {% if block.type == 'collection' %}
                  {% render 'card-collection',
                    card_collection: block.settings.collection,
                    name: block.settings.collection_name,
                    image: block.settings.collection_image,
                    content: block.settings.content,
                    show_arrow: section.settings.show_arrow
                    block: block
                  %}
                {% else %}
                  {% render 'card-collection',
                    url: block.settings.url,
                    name: block.settings.name,
                    image: block.settings.image,
                    show_arrow: section.settings.show_arrow
                    content: block.settings.content,
                    block: block
                  %}
                {% endif %}
              </div>
            {% endfor %}
          </div>
        {% endif %}
      </div>
      {% if section.settings.enable_slider == true %}
        <div class="--navigation-wrapper">
          <div class="--arrow-wrapper">
            <div class="prev-{{ section.id }} --nav-icon">
              {% render 'all-icons', name: 'left_arrow' %}
            </div>
            <div class="next-{{ section.id }} --nav-icon">
              {% render 'all-icons', name: 'right_arrow' %}
            </div>
          </div>
          <div class="swiper-scrollbar-{{ section.id }} swiper-scrollbar"></div>
          <div class="--scrollbar-wrapper"></div>
        </div>
      {% endif %}
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    new Swiper(".swiper-{{ section.id }}", {
      slidesPerView: {{ section.settings.slides_per_view_mbl }},
      spaceBetween: 12,
      breakpoints: {
        768: {
          slidesPerView: {{ section.settings.slides_per_view }},
          spaceBetween: 16,
        },
      },
       navigation: {
          nextEl: '.next-{{ section.id }}',
          prevEl: '.prev-{{ section.id }}'
        },
        scrollbar: {
          el: ".swiper-scrollbar-{{ section.id }}.swiper-scrollbar",
          draggable: true,
          hide: true
        },
    });
  });
</script>

