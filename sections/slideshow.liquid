    .slideshow__nav_icon {
        width: 40px;
        height: 40px;
        display: flex;
        background: #fff;
        line-height: 1;
        position: absolute;
        top: 50%;
        z-index: 1;
        border-radius: 50%;
        align-items: center;
        justify-content: center;
        transform: translateY(-50%);
        transition: all 0.15s;
        box-shadow: 0px 1px 2px -1px rgba(0, 0, 0, 0.10), 0px 1px 3px 0px rgba(0, 0, 0, 0.10);
        cursor: pointer;
       @media(max-width: 600px) {
         /* display: none; */
       }
    }
    .slideshow__nav_icon svg path {
      stroke: #000;
    }
    .slideshow__nav_icon.swiper-button-disabled {
      background: #CCC;
      box-shadow: 0px 1px 2px -1px rgba(0, 0, 0, 0.10), 0px 1px 3px 0px rgba(0, 0, 0, 0.10);
    }
    .prev-{{ section.id }}.slideshow__nav_icon {
      left: 16px;
    }
    .next-{{ section.id }}.slideshow__nav_icon {
      right: 16px;
    }
    @media(min-width: 768px) {
      .prev-{{ section.id }}.slideshow__nav_icon {
        left: 0;
        transform: translateX(-50px);
      }
      .next-{{ section.id }}.slideshow__nav_icon {
        right: 0;
        transform: translateX(50px);
      }
      .wrapper-{{ id }}:hover .prev-{{ section.id }}.slideshow__nav_icon {
        transform: translateX(40px);
      }
      .wrapper-{{ id }}:hover .next-{{ section.id }}.slideshow__nav_icon {
        transform: translateX(-40px);
      }
    }
