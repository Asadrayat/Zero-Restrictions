<style>
    #shopify-section-{{id}} {
      box-sizing: border-box;
      margin-top: {{section.settings.margin_top | append: 'px'}};
      margin-bottom: {{section.settings.margin_bottom | append: 'px'}};
      padding-top: {{section.settings.padding_top | append: 'px'}};
      padding-bottom: {{section.settings.padding_bottom | append: 'px'}};
    }
    .wrapper-{{ id }} .image-wrap.adaptive {
      /* height: calc(100dvh - 98px); */
      height: calc(100dvh - 35px);
      @media(max-width: 1280px) {
        /* height: calc(100vh - 50px); */
        height: calc(100vh - 30px);

      }
      @media(max-width: 600px) {
        /* height: calc(100vh - 220px); */
        height: calc(100svh - 47px);

      }
    }
    .wrapper-{{ id }} .image-wrap video {
      display: block;
      width: 100%;
      object-fit: cover;
      height: 100%;
      min-height: -webkit-fill-available;
      @media(max-width: 600px){
      min-height: 500px;
    }
    }
    .wrapper-{{ id }} .image-wrap img {
      width: 100%;
      object-fit: cover;
      height: 100%;
      min-height: -webkit-fill-available;
    }
    .wrapper-{{ id }} .image-wrap.original img {
      height: auto;
    }
    .wrapper-{{ id }} .image-wrap.custom :is(img, video) {
      height: auto;
      max-height: {{ section.settings.banner_max_height | append:'px' }};
      @media(max-width: 600px) {
        height: auto;
        {% if section.settings.banner_max_height_m != blank %}
        max-height: {{ section.settings.banner_max_height_m | append:'px' }};
        {% else %}
          max-height: {{ section.settings.banner_max_height | append:'px' }};
        {% endif %}
      }
    }
    .wrapper-{{ id }} .block__wrapper {
      position: relative;
    }
