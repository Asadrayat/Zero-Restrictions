{% liquid
  assign id = section.id
%}

<style>
      #shopify-section-{{id}} {
        box-sizing: border-box;
        margin-top: {{section.settings.margin_top | append: 'px'}};
        margin-bottom: {{section.settings.margin_bottom | append: 'px'}};
        padding-top: {{section.settings.padding_top | append: 'px'}};
        padding-bottom: {{section.settings.padding_bottom | append: 'px'}};
        overflow: hidden;
      }

      @media(max-width: 600px) {
        #shopify-section-{{id}} {
          margin-top: {{section.settings.margin_top_m | append: 'px'}};
          margin-bottom: {{section.settings.margin_bottom_m | append: 'px'}};
          padding-top: {{section.settings.padding_top_m | append: 'px'}};
          padding-bottom: {{section.settings.padding_bottom_m | append: 'px'}};
        }
      }
      #shopify-section-{{id}}{
        .top--wrapper{
          display: flex;
          justify-content: space-between;
          align-items: center;
          align-self: stretch;
          margin-bottom: var(--Spacing-Container-xl, 40px);
        }
        .title--wrapper{
          display: flex;
          max-width: 800px;
          flex-direction: column;
          justify-content: center;
          {% comment %} text-align: center; {% endcomment %}
          gap: var(--Spacing-Container-xs, 12px);
          flex: 1 0 0;
          a{
            text-decoration: none;
          }
        }
        .title{
          {% comment %} text-align: center; {% endcomment %}
          margin: 0;
          color: #000;
          {% comment %} font-family: var(--font-family-Title, "Sainte Colombe"); {% endcomment %}
          font-size: var(--Font-Size-Heading-H2, 48px);
          font-style: normal;
          font-weight: 400;
          line-height: var(--Line-Height-Heading-H2, 56px); /* 116.667% */
          letter-spacing: -0.96px;
        }
        .subtitle{
          margin: 0;
          color: #000;
          {% comment %} font-family: var(--font-family-Body, "Sainte Colombe"); {% endcomment %}
          font-size: var(--Font-Size-Paragraph-Medium, 18px);
          font-style: normal;
          font-weight: 400;
          line-height: var(--Line-Height-Paragraph-Medium, 26px); /* 144.444% */
        }
        .img--wrapper img{
          width: 100%;
          height: auto;
          object-fit: cover;
          aspect-ratio: 4 / 5;
        }
        .arrow_btn:before, .arrow_btn:after {
            top: 50%;
            transform: translatey(-50%);
        }
        .btn-wrapper{
          @media(max-width: 768px){
            display: none;
          }
        }
        .bottom--wrapper{
          /* display: none; */
          /* @media(max-width: 768px){
            display: block;
            margin-top: var(--Spacing-Container-lg, 24px);
          } */
        }
        .card-grid-container{
          display: grid;
          grid-template-columns: repeat({{ section.settings.grid_desktop }}, minmax(0,1fr));
          gap: var(--Spacing-Container-lg, 40px);
          @media(max-width: 600px){
            grid-template-columns: repeat({{ section.settings.grid_desktop_mbl }}, minmax(0,1fr));
            gap: var(--Spacing-Container-md, 16px);
          }
        }


        /* Swiper Navigation */
        .card-list--wrapper{
          position: relative;
        }
        .swiper-button-next:after,
        .swiper-button-prev:after {
          content: 'none';
        }
        .swiper-button-next.swiper-button-disabled, .swiper-button-prev.swiper-button-disabled{
          display: none!important;
        }
        #slider-next--{{ section.id }} {
          color: #000;
          width: 40px;
          height: 40px;
          position: absolute;
          top: 50%;
          display: flex;
          padding: 8px;
          align-items: center;
          border-radius: var(--rounded-full, 999999px);
          background: #FFF;
          box-shadow: 0px 1px 2px -1px rgba(0, 0, 0, 0.10), 0px 1px 3px 0px rgba(0, 0, 0, 0.10);
          {% if section.settings.full_width %}
            right: 12px;
            transform: translateY(-100%);
          {% else %}
            right: 0;
            transform: translate(50%, -100%);
          {% endif %}
          @media(max-width: 600px){
            /* transform: unset; */
            right: 2px;
          }
        }
        #slider-next--{{ section.id }} svg{
          width: 24px;
          height: 24px;
        }
       #slider-prev--{{ section.id }}{
          color: #000;
          width: 40px;
          height: 40px;
          position: absolute;
          top: 50%;
          display: flex;
          padding: 8px;
          align-items: center;
          border-radius: var(--rounded-full, 999999px);
          background: #FFF;
          box-shadow: 0px 1px 2px -1px rgba(0, 0, 0, 0.10), 0px 1px 3px 0px rgba(0, 0, 0, 0.10);
          {% if section.settings.full_width %}
            left: 12px;
             transform: translateY(-100%);
          {% else %}
            left: 0;
             transform: translate(-50%, -100%);
          {% endif %}
          @media(max-width: 600px){

          }
       }
       #slider-prev--{{ section.id }} svg{
          width: 24px;
          height: 24px;
       }
      .swiper:not(.swiper-initialized) .swiper-slide {
          max-width: calc(var(--page-width)/{{ section.settings.slides_per_view }}) !important;
          margin-right: 16px;
          overflow: hidden;
          @media(max-width: 600px){
            max-width: calc(var(--page-width)/{{ section.settings.slides_per_view_mbl }}) !important;
          }
      }
      .swiper-scrollbar-{{ section.id }} {
        position: relative !important;
        left: 0 !important;
        bottom: 0 !important;
        margin: var(--Spacing-Container-md) 0;
        height: 1px !important;
        opacity: 1 !important;
        width: 100% !important;
        cursor: pointer;
        padding-block: 8px;
        background: transparent;
        .swiper-scrollbar-drag {
          background: #00094b;
          display: block !important;
          height: 1px;
        }
      }
      .swiper-scrollbar-{{ section.id }}::before {
        position: absolute;
        content: "";
        background: var(--swiper-scrollbar-bg-color, rgba(0, 0, 0, .1));
        top: 50%;
        left: 0;
        width: 100%;
        height: 1px;
      }
    }


  {% comment %} swiper css starts  {% endcomment %}
     .sec-{{ section.id }} .--nav-button-wrapper {
      display: flex;
      align-items: center;
      gap: 8px;
      @media(max-width: 768px) {
        padding: 16px 0;
      }
  }

    .sec-{{ section.id }} .swiper-button-disabled {
        opacity: .5;
    }
    .sec-{{ section.id }} .--nav-icon.swiper-button-lock {
        display: none;
    }
    .sec-{{ section.id }} .--nav-icon {
        display: flex;
        min-width: 36px;
        width: 36px;
        height: 36px;
        justify-content: center;
        align-items: center;
        gap: 8px;
        border: 1px solid #000;
        background: #FFF;
        position: absolute;
        top: 40%;
        z-index: 1;
        cursor: pointer;
        transition: 0.5s ease;
          svg path{
          transition: 0.5s ease;
          }
          @media(max-width: 768px){
          /* display: none; */
          position: relative !important;
        }
    }
     @media(min-width: 769px){
      .sec-{{ section.id }} .--nav-icon:hover{
        background: #000;
        svg path{
          fill: #fff;
        }
      }

      }

    .swiper-prev-{{section.id }}.--desktop-nav {
        left: -60px;
        @media(max-width: 768px){
          display: none !important;
        }
    }
    .swiper-next-{{section.id }}.--desktop-nav {
        right: -60px;
         @media(max-width: 768px){
          display: none !important;
        }

    }
    .swiper-prev-{{section.id }}.--mobile-nav ,
    .swiper-next-{{section.id }}.--mobile-nav {
      @media(min-width: 768px){
          display: none !important;
      }
    }

  {% comment %} swiper css ends  {% endcomment %}
</style>
{% liquid
  assign product_url = section.settings.product.url
%}
<div class="sec-{{ id }}  belongsToNav" id="{{ section.settings.id_nav | downcase }}">
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <div class="wrapper-{{ id }}">
      <div class="top--wrapper">
        <div class="title--wrapper">
          <a href="{{ product_url }}">
            {% if section.settings.title != blank %}
              <h2 class="title">{{ section.settings.title }}</h2>
              {% else %}

{% assign sec_title = section.blocks[0].settings.product.title | split: '|' | first %}

                <h2 class="title">{{ sec_title }}</h2>
            {% elsif section.settings.product %}
              <h2 class="title">{{ section.settings.product.title }}</h2>
            {% endif %}
          </a>
          {% if section.settings.subtitle != blank %}
            <h2 class="subtitle">{{ section.settings.subtitle }}</h2>
          {% endif %}
        </div>
      </div>
      <div class="card-list--wrapper">
        {% if section.settings.enable_slider == true %}
          <div class="swiper swiper-{{ section.id }}">
            <div class="swiper-wrapper">
              {% for block in section.blocks %}
                {% unless block.settings.type == 'product' %}
{% for media in block.settings.product.media %}
    {% if media.media_type == 'image' %}
                  <div class="swiper-slide">
                    <a href="{{ block.settings.product.url }}">
                      <div class="img--wrapper">
                        {% if media != null %}
                          {{
                            media
                            | image_url: width: media.width
                            | image_tag: class: 'card--image'
                          }}
                        {% else %}
                          {{ 'image' | placeholder_svg_tag }}
                        {% endif %}
                      </div>
                    </a>
                  </div>

    {% endif %}
{% endfor %}

                {% endunless %}
              {% endfor %}
            </div>
            <div class="--nav-button-wrapper">
              <div class="swiper-scrollbar-{{ section.id }} swiper-scrollbar"></div>
              {% if section.settings.show_slider_arrow %}
                <div class="swiper-prev-{{ section.id }} --nav-icon --mobile-nav">
<svg aria-hidden="true" width="6" height="12"  focusable="false" role="presentation" viewBox="0 0 284.49 498.98" class="w-5 h-5 fill-current stroke-current">
