{% liquid
  assign id = section.id
%}

<style>
  #shopify-section-{{id}} {
    box-sizing: border-box;
    margin-top: {{section.settings.margin_top | append: 'px'}};
    margin-bottom: {{section.settings.margin_bottom | append: 'px'}};
    padding-top: {{section.settings.padding_top | append: 'px'}};
    padding-bottom: {{section.settings.padding_bottom | append: 'px'}};
  }

  @media(max-width: 600px) {
    #shopify-section-{{id}} {
      margin-top: {{section.settings.margin_top_m | append: 'px'}};
      margin-bottom: {{section.settings.margin_bottom_m | append: 'px'}};
      padding-top: {{section.settings.padding_top_m | append: 'px'}};
      padding-bottom: {{section.settings.padding_bottom_m | append: 'px'}};
    }
  }
  #shopify-section-{{id}} {
    .wrapper-{{ id }}{
      display: grid;
      grid-template-columns: repeat(2,minmax(0,1fr));
      max-width: 1080px;
      margin: auto;
      @media(max-width: 768px){
        grid-template-columns: minmax(0,1fr);
        gap: var(--Spacing-Container-md, 24px);
      }
    }
    .content-wrapper{
      display: flex;
      padding-right: var(--Spacing-Container-xxl, 80px);
      flex-direction: column;
      align-items: flex-start;
      gap: var(--Spacing-Container-md, 24px);
      flex: 1 0 0;
      @media(max-width: 768px){
        padding-right: unset;
      }
    }
    .text-wrapper{
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      gap: var(--Spacing-Container-xs, 12px);
      align-self: stretch;
    }
    .title{
      color: var(--Text-primary, #000);
      margin: 0;
      /* font-family: var(--font-family-Title, "Neue Plak"); */
      font-size: var(--Font-Size-Heading-H2, 40px);
      font-style: normal;
      font-weight: 400;
      line-height: var(--Line-Height-Heading-H2, 40px); /* 100% */
      letter-spacing: -0.4px;
    }
    .description{
      color: var(--Text-primary, #000);
      margin: 0;
      /* font-family: var(--font-family-Body, "Neue Plak"); */
      font-size: var(--Font-Size-Paragraph-Regular, 16px);
      font-style: normal;
      font-weight: 400;
      line-height: var(--Line-Height-Paragraph-Regular, 24px); /* 150% */
    }
    .phone-container{
      display: flex;
      align-items: flex-start;
      gap: 16px;
      align-self: stretch;
    }
    .phone-wrapper{

    }
    .phone-text{
      color: var(--Text-primary, #000);
      margin: 0;
      /* font-family: var(--font-family-Title, "Neue Plak"); */
      font-size: var(--Font-Size-Heading-H3, 24px);
      font-style: normal;
      font-weight: 400;
      line-height: var(--Line-Height-Heading-H3, 28px); /* 116.667% */

    }
    .phone-number{
      color: var(--Link-primary, #000);
      margin: 0;
      /* font-family: var(--font-family-Body, "Neue Plak"); */
      font-size: var(--Font-Size-Paragraph-Regular, 16px);
      font-style: normal;
      font-weight: 400;
      line-height: var(--Line-Height-Paragraph-Regular, 24px); /* 150% */
      a {
        color: var(--Text-primary, #000);
      }      
    }

    /* Contact Form */
    .contact-form-wrapper {
      border-radius: var(--rounded-2xl, 16px);
      border: 1px solid var(--Border-Base-subtle, #E5E7EB);
      background: var(--Background-base-subtle, #F3F4F6);
      padding: var(--Spacing-Container-lg, 40px);
      box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }

    .form-status--message{
      color: var(--Text-primary, #000);
      /* font-family: var(--font-family-Title, "Neue Plak"); */
      font-size: var(--Font-Size-Heading-H4);
      font-style: normal;
      font-weight: 400;
      line-height: var(--Line-Height-Heading-H4); /* 100% */
      letter-spacing: -0.4px;      
    }
    
    .field {
      display: flex;
      flex-direction: column;
      margin-bottom: 15px;
    }
    
    .field__label {
      font-weight: 600;
      margin-bottom: 5px;
      font-size: 14px;
      color: #333;
      display: block; /* Ensures label is visible */
    }
    
    .field__input {
      padding: 10px;
      font-size: 14px;
      transition: border-color 0.3s ease-in-out;
      border-radius: var(--rounded-lg, 8px);
      border: 1px solid var(--Border-Base-main, #D1D5DB);
      background: var(--Background-base, #FFF);
    }
    
    .field__input:focus {
      border-color: #333;
      outline: none;
    }
    
    .text-area {
      min-height: 100px;
    }
    
    .contact__button {
      text-align: center;
      margin-top: 10px;
    }
    
    .button {
      width: 100%;
      cursor: pointer;
      border-radius: var(--rounded-3xl, 24px);
      background: #000;
      padding: var(--Spacing-Container-xs, 12px) var(--Spacing-Container-lg, 40px);
      color: #FFF;
      text-align: center;
      /* font-family: var(--font-family-Body, "Neue Plak"); */
      font-size: var(--Font-Size-UI-Controls-Control-Button-Regular, 20px);
      font-style: normal;
      font-weight: 400;
      line-height: var(--Line-Height-UI-Controls-Control-Button-Regular, 20px); /* 100% */
      text-transform: capitalize;
      transition: 0.4s ease;
    }
    .button:hover {
              
              @media(min-width: 769px){
               background: #fff;
               color: #000;
              }
            }
    .field:before {
      content: unset;
    }
    .field:after {
      content: unset;
    }
    .field__label{
      position: static;
      color: var(--Content-Base-main, #1F2937);
      /* font-family: var(--font-family-Body, "Neue Plak"); */
      font-size: var(--Font-Size-Paragraph-Regular, 16px);
      font-style: normal;
      font-weight: 400;
      line-height: var(--Line-Height-Paragraph-Regular, 24px); /* 150% */
      @media(max-width: 768px){

      }
    }
    .field__input {
        margin: 0 0 4px 0;
        /* border-bottom: 1px solid #00000054; */
        @media(max-width: 768px){
          /* padding: 0;          */
        }
    }
    .field__input:focus{
      margin: 0 0 4px 0;
      box-shadow: unset;
    }
    .field__input::placeholder {
      opacity: 1; 
      color: var(--Color-Neutral-neutral, #666);
      font-family: var(--font-family-Body, "Neue Plak");
      font-size: var(--Font-Size-Paragraph-Regular, 16px);
      font-style: normal;
      font-weight: 400;
      line-height: var(--Line-Height-Paragraph-Regular, 24px); /* 150% */
    }

    
  }
</style>

<div class="sec-{{ id }}">
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <div class="wrapper-{{ id }}">
      <div class="content-wrapper">
        <div class="text-wrapper">
          <h2 class="title">{{ section.settings.title }}</h2>
          <p class="description">{{ section.settings.des }}</p>
        </div>
        <div class="phone-container">
          <div class="icon-wrapper">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
              <path d="M17.7071 12.293C17.6143 12.2 17.5041 12.1263 17.3828 12.076C17.2615 12.0257 17.1314 11.9998 17.0001 11.9998C16.8688 11.9998 16.7387 12.0257 16.6174 12.076C16.4961 12.1263 16.3859 12.2 16.2931 12.293L14.6991 13.887C13.9601 13.667 12.5811 13.167 11.7071 12.293C10.8331 11.419 10.3331 10.04 10.1131 9.30096L11.7071 7.70696C11.8 7.61417 11.8738 7.50397 11.9241 7.38265C11.9744 7.26134 12.0003 7.13129 12.0003 6.99996C12.0003 6.86862 11.9744 6.73858 11.9241 6.61726C11.8738 6.49595 11.8 6.38575 11.7071 6.29296L7.70709 2.29296C7.6143 2.20001 7.5041 2.12627 7.38278 2.07596C7.26147 2.02565 7.13142 1.99976 7.00009 1.99976C6.86876 1.99976 6.73871 2.02565 6.6174 2.07596C6.49608 2.12627 6.38588 2.20001 6.29309 2.29296L3.58109 5.00496C3.20109 5.38496 2.98709 5.90696 2.99509 6.43996C3.01809 7.86396 3.39509 12.81 7.29309 16.708C11.1911 20.606 16.1371 20.982 17.5621 21.006H17.5901C18.1181 21.006 18.6171 20.798 18.9951 20.42L21.7071 17.708C21.8 17.6152 21.8738 17.505 21.9241 17.3837C21.9744 17.2623 22.0003 17.1323 22.0003 17.001C22.0003 16.8696 21.9744 16.7396 21.9241 16.6183C21.8738 16.4969 21.8 16.3867 21.7071 16.294L17.7071 12.293ZM17.5801 19.005C16.3321 18.984 12.0621 18.649 8.70709 15.293C5.34109 11.927 5.01509 7.64196 4.99509 6.41896L7.00009 4.41396L9.58609 6.99996L8.29309 8.29296C8.17555 8.41041 8.08913 8.55529 8.04164 8.71453C7.99415 8.87376 7.98709 9.04231 8.02109 9.20496C8.04509 9.31996 8.63209 12.047 10.2921 13.707C11.9521 15.367 14.6791 15.954 14.7941 15.978C14.9566 16.0129 15.1254 16.0064 15.2847 15.9591C15.4441 15.9117 15.589 15.825 15.7061 15.707L17.0001 14.414L19.5861 17L17.5801 19.005Z" fill="black"/>
            </svg>
          </div>
          <div class="phone-wrapper">
            <h3 class="phone-text">{{ section.settings.phone_text }}</h3>
            <p class="phone-number">{{ section.settings.phone }}</p>
          </div>
        </div>
      </div>

      <div class="contact-form-wrapper">
        {%- form 'contact', id: 'ContactForm', class: 'contact-form' -%}
      
          {%- if form.posted_successfully? -%}
            <h2 class="form-status form-status-list form__message form-status--message" tabindex="-1" autofocus>
              {{ 'templates.contact.form.post_success' | t }}
            </h2>
          {%- elsif form.errors -%}
            <div class="form__message">
              <h2 class="form-status caption-large text-body form-status--message" role="alert" tabindex="-1" autofocus>
                {{ 'templates.contact.form.error_heading' | t }}
              </h2>
            </div>
            <ul class="form-status-list caption-large form-status--message" role="list">
              <li>
                <a href="#ContactForm-email" class="link">
                  {{ form.errors.translated_fields.email | capitalize }} {{ form.errors.messages.email }}
                </a>
              </li>
            </ul>
          {%- endif -%}
      
          <!-- Name Field -->
          <div class="field">
            <label for="ContactForm-name" class="field__label">Name</label>
            <input
              class="field__input"
              type="text"
              id="ContactForm-name"
              name="contact[name]"
              value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}"
              required
            >
          </div>
      
          <!-- Email Field -->
          <div class="field">
            <label for="ContactForm-email" class="field__label">Email</label>
            <input
              type="email"
              id="ContactForm-email"
              class="field__input"
              name="contact[email]"
              spellcheck="false"
              autocapitalize="off"
              value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
              required
            >
          </div>
      
          <!-- Message Field -->
          <div class="field">
            <label for="ContactForm-body" class="field__label">Message</label>
            <textarea
              rows="5"
              id="ContactForm-body"
              class="text-area field__input"
              name="contact[message]"
              placeholder="Type your message..."
              required
            >{% if form.body %}{{ form.body }}{% endif %}</textarea>
          </div>
      
          <!-- Submit Button -->
          <div class="contact__button">
            <button type="submit" class="button">Send</button>
          </div>
        
        {%- endform -%}
      </div>
         
    </div>
  </div>
</div>

