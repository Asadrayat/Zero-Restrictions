{% liquid
  assign id = section.id
%}

<style>
  #shopify-section-{{id}} {
    box-sizing: border-box;
    margin-top: {{section.settings.margin_top | append: 'px'}};
    margin-bottom: {{section.settings.margin_bottom | append: 'px'}};
    padding-top: {{section.settings.padding_top | append: 'px'}};
    padding-bottom: {{section.settings.padding_bottom | append: 'px'}};
  }

  @media(max-width: 768px) {
    #shopify-section-{{id}} {
      margin-top: {{section.settings.margin_top_m | append: 'px'}};
      margin-bottom: {{section.settings.margin_bottom_m | append: 'px'}};
      padding-top: {{section.settings.padding_top_m | append: 'px'}};
      padding-bottom: {{section.settings.padding_bottom_m | append: 'px'}};
    }
  }
    #shopify-section-{{id}} {
      .wrapper-{{ id }}{
        display: grid;
        grid-template-columns: repeat(3, minmax(0, 1fr));
        gap: var(--Spacing-Container-sm, 16px);
        @media(max-width: 768px){
          grid-template-columns: minmax(0, 1fr);
        }
      }
      .content-wrapper{
        display: flex;
        flex-direction: column;
        gap: var(--Spacing-Container-md, 24px);
      }
      .title{
        color: var(--Content-Base-main, #1F2937);
        /* font-family: var(--font-family-Title, "Neue Plak"); */
        font-size: var(--Font-Size-Heading-H2, 40px);
        font-style: normal;
        font-weight: 400;
        line-height: var(--Line-Height-Heading-H2, 40px); /* 100% */
        letter-spacing: -0.4px;
        margin: 0;
        max-width: 80%;
        margin-bottom: 8px;
        @media(max-width: 768px){
          max-width: unset;
        }
      }
      .description{
        color: var(--Content-Base-main, #1F2937);
        /* font-family: var(--font-family-Body, "Neue Plak"); */
        font-size: var(--Font-Size-Paragraph-Medium, 18px);
        font-style: normal;
        font-weight: 400;
        line-height: var(--Line-Height-Paragraph-Medium, 26px); /* 144.444% */
        margin: 0;
        max-width: 90%;
        @media(max-width: 768px){
          letter-spacing: normal;
          max-width: unset;
        }
      }
      .view-all--btn{
        display: flex;
        padding: var(--Spacing-Container-xs, 12px) var(--Spacing-Container-lg, 40px) var(--Spacing-Container-sm, 16px) var(--Spacing-Container-lg, 40px);
        justify-content: center;
        align-items: center;
        gap: 8px;
        border-radius: var(--rounded-3xl, 24px);
        /* border: 2px solid var(--Content-Base-main, #1F2937); */
        /* background: #EEEDF7; */
        /* color: var(--Content-Base-main, #1F2937); */
        text-align: center;
        /* font-family: var(--font-family-Body, "Neue Plak"); */
        font-size: var(--Font-Size-UI-Controls-Control-Button-Regular, 20px);
        font-style: normal;
        font-weight: 400;
        line-height: var(--Line-Height-UI-Controls-Control-Button-Regular, 20px); /* 100% */
        text-transform: capitalize;
        max-width: fit-content;
      }
    }
</style>

<div class="sec-{{ id }}" id="{{ section.settings.id_nav | downcase }}">
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <div class="wrapper-{{ id }}">
      {% for block in section.blocks %}
        {% if block.type == 'collection' %}
          {% render 'card-collection',
            card_collection: block.settings.collection,
            name: block.settings.collection_name,
            image: block.settings.collection_image,
            block: block,
            id: block.id
          %}
        {% elsif block.type == 'text_block' %}
          <div class="content-wrapper">
            <div class="text-wrapper">
              {% if block.settings.title != blank %}
                <h2 class="title">{{ block.settings.title }}</h2>
              {% endif %}
              {% if block.settings.des != blank %}
                <p class="description">{{ block.settings.des }}</p>
              {% endif %}
            </div>
            {% if block.settings.btn != blank %}
              <a href="{{ block.settings.url }}" class="view-all--btn button">{{ block.settings.btn }}</a>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

