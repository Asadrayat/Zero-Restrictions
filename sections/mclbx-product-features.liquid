{% liquid
  assign id = section.id
%}
{% assign feature_cards = product.metafields.custom.product_feature_cards %}
<style>
  #shopify-section-{{id}} {
    box-sizing: border-box;
    margin-top: {{section.settings.margin_top | append: 'px'}};
    margin-bottom: {{section.settings.margin_bottom | append: 'px'}};
    padding-top: {{section.settings.padding_top | append: 'px'}};
    padding-bottom: {{section.settings.padding_bottom | append: 'px'}};
    
  }

  @media(max-width: 768px) {
    #shopify-section-{{id}} {
      margin-top: {{section.settings.margin_top_m | append: 'px'}};
      margin-bottom: {{section.settings.margin_bottom_m | append: 'px'}};
      padding-top: {{section.settings.padding_top_m | append: 'px'}};
      padding-bottom: {{section.settings.padding_bottom_m | append: 'px'}};
    }
  }

.wrapper-{{ id }} {
    display: grid;
    grid-template-columns: repeat(3, minmax(0,1fr));
    gap: var(--Spacing-Container-sm);
    @media(max-width: 768px) {
      grid-template-columns:  minmax(0,1fr);
      gap: var(--Spacing-Container-xl);
    }

.--image-wrapper img {
    aspect-ratio: 466/622;
    object-fit: cover;
    border-radius: 16px;
   @media(max-width: 768px) {
     aspect-ratio: 361/440;
   }
}
h3.--card-title {
    color: var(--Content-Base-main);
    font-weight: 400;
    margin-block: var(--Spacing-Container-sm) var(--Spacing-Container-xxs);
   @media(max-width: 768px) {
      margin-block: var(--Spacing-Container-md) var(--Spacing-Container-xxs);
   }
}
p.--card-content {
    color: var(--Content-Base-base, #4B5563);
    /* font-family: var(--font-family-Body, "Neue Plak"); */
    line-height: var(--Line-Height-Paragraph-Regular, 24px);
    margin-block: 0;
}  
}  
</style>

<div class="sec-{{ id }} {% if feature_cards ==  blank %}
      hidden
    {% endif %}">
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <div class="wrapper-{{ id }}">
      {% for card in feature_cards.value %}
        <div class="--single-card">
          <div class="--image-wrapper">
            {{ card.image | image_url: width: card.image.width | image_tag }}
          </div>
          <h3 class="--card-title">{{ card.title }}</h3>

          <p class="--card-content">{{ card.content }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Product Features",
  "settings": [
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Full Width Section",
      "default": false
    },
    {
      "type": "header",
      "content": "Section Spacing Desktop"
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin Top",
      "default": 0
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin Bottom",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Top",
      "default": 48
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 48
    },
    {
      "type": "header",
      "content": "Section Spacing Mobile"
    },
    {
      "type": "range",
      "id": "margin_top_m",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin Top",
      "default": 0
    },
    {
      "type": "range",
      "id": "margin_bottom_m",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin Bottom",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_top_m",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Top",
      "default": 32
    },
    {
      "type": "range",
      "id": "padding_bottom_m",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 32
    }
  ],

  "presets": [
    {
      "name": "Product Features"
    }
  ]
}
{% endschema %}
