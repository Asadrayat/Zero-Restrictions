{% liquid
  assign id = section.id
%}

<style>
  #shopify-section-{{id}} {
    box-sizing: border-box;
    margin-top: {{section.settings.margin_top | append: 'px'}};
    margin-bottom: {{section.settings.margin_bottom | append: 'px'}};
    padding-top: {{section.settings.padding_top | append: 'px'}};
    padding-bottom: {{section.settings.padding_bottom | append: 'px'}};
    background: {{ section.settings.bg }};
    .swiper-slide{
      height: -webkit-fill-available;
    }
    .content__wrapper {
      height: 100%;
    }
  }
  .sec-{{ id }} *, .block-{{ id }} * {
    color: #fff;
  }
    .top-wrapper {
        margin: 0 0 var(--Spacing-Container-lg);
    }
    .title{
        text-align: center;
        /* Headings/H2 */
        font-family: var(--font-family-Title, Archivo);
        font-size: var(--Font-Size-Heading-H2, 40px);
        font-style: normal;
        font-weight: 500;
        line-height: var(--Line-Height-Heading-H2, 40px); /* 100% */
        letter-spacing: -0.4px;
        text-transform: capitalize;
        margin: 0 0 8px;
        em {
          display: block;
          font-style: normal;
          @media(max-width: 768px) {
            display: unset;
          }
        }
    }
    .subtitle {
        margin: 0;
        text-align: center;
        /* Paragraph/M */
        font-family: var(--font-family-Body, Archivo);
        font-size: var(--Font-Size-Paragraph-Regular, 16px);
        font-style: normal;
        font-weight: 400;
        line-height: var(--Line-Height-Paragraph-Regular, 24px); /* 150% */
        em {
          display: block;
          font-style: normal;
          @media(max-width: 768px) {
            display: unset;
          }
        }        
    }  
  .wrapper-{{ id }} {
    color: #fff;
    .content__wrapper {
      border-radius: var(--rounded-xl, 12px);
      border: 1px solid #252225;
      background: #0D0C0D;
      padding: var(--Spacing-Container-md, 32px);
      display: flex;
      flex-direction: column;
      gap: var(--Spacing-Container-xl, 32px);
      justify-content: space-between;
      position: relative;
      overflow: hidden; // ensures gradient stays within rounded corners
      transition: background 0.4s ease-in-out;

      &::after {
        content: '';
        position: absolute;
        inset: 0;
        background: linear-gradient(113deg, rgb(86 86 86 / 15%) 16.98%, rgb(255 255 255 / 24%) 99.01%);
        opacity: 0;
        transition: opacity 0.4s ease-in-out;
        pointer-events: none;
      }

      &:hover::after {
        opacity: 1;
      }

      em {
        display: block;
        font-style: normal;

        @media (max-width: 768px) {
          display: unset;
        }
      }
    }

    h3 {
        margin: 0 0 var(--Spacing-Container-sm);
    }
    .review__info svg {
        width: 64px;
        height: 64px;
        aspect-ratio: 1/1;
        margin: 0 0 var(--Spacing-container-md)px;
    }
    .__username {
        margin: 0 0 var(--Spacing-container-xs)px;
    }
    .__tag {
        color: var(--Content-Inverted-main, #F3F4F6);

        /* Paragraph/XS */
        font-family: var(--font-family-Body, Archivo);
        font-size: var(--Font-Size-Paragraph-Tiny, 12px);
        font-style: normal;
        font-weight: 400;
        line-height: var(--Line-Height-Paragraph-Tiny, 16px); /* 133.333% */
        margin: 0;
    }
  }
  .user__img {
    display: flex;
    justify-content: space-between;
    gap: 16px;    
    img {
      border-radius: 5px;
      background: rgba(255, 255, 255, 0.10);
      box-shadow: 0 0.5px 0 0 rgba(255, 255, 255, 0.50) inset, 0 0 0 2px rgba(0, 0, 0, 0.05), 0 0 0 1px rgba(255, 255, 255, 0.10);
      display: flex;
      width: 48px;
      height: 48px;
      padding: var(--Spacing-Container-xxs, 8px);
      flex-direction: column;
      justify-content: center;
      align-items: center;
      gap: var(--Spacing-Container-sm, 16px);
      flex-shrink: 0;    
    }
    span.number__ {
      -webkit-text-stroke-width: 2px;
      -webkit-text-stroke-color: #ffffff12;
      font-family: var(--font-family-Body, Archivo);
      font-size: 128px;
      font-style: normal;
      font-weight: 400;
      line-height: 80%;
      letter-spacing: 3.84px;
      background: linear-gradient(217deg, rgba(255, 255, 255, 0.00) 4.11%, rgba(255, 255, 255, 0.08) 85.81%);
      background-clip: text;
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent; 
      @media(max-width: 768px) {
        font-size: 64px;
      }      
    }     
  }   
  .block-{{ id }} {
    {% if section.settings.divider %}
      border-top: 1px solid transparent;
      border-image: linear-gradient(
      -90deg,
      rgba(255, 255, 255, 0.1) 20%,
      rgba(102, 194, 253, 1) 49.5%,
      rgba(255, 255, 255, 0.1) 80%
    ) 1;
    
      padding-top: 48px;
      margin-top: 48px;
      transition: all 0.4s ease-in-out;
      @media(max-width: 768px)  {
        padding-top: 24px;
        margin-top: 24px;
      }
    {% endif %}
    &:hover {
        border-image: linear-gradient(-90deg, rgba(255, 255, 255, 0.1) 20%, #eee 49.5%, rgba(255, 255, 255, 0.1) 80%) 1;
    }    
    .bloxk__wrap {
        display: grid;
        grid-template-columns: 1fr 1fr 1fr;
        align-items: stretch;
        gap: 24px;
        @media(max-width: 768px) {
          grid-template-columns: 1fr;
        }
    }
    .block__rc {
        padding: var(--Spacing-Container-xxl) 0;
        position: relative;
        @media(max-width: 768px) {
          padding: var(--Spacing-Container-sm) 0;
        }
    }
    .block__rc::after {
      position: absolute;
      content: "";
      width: 1px;
      height: calc(100% - 64px);
      top: 50%;
      left: -12px;
      background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="1" height="400" viewBox="0 0 1 400" fill="none"><path d="M0.5 0V400" stroke="url(%23paint0_linear_18738_10284)"/><defs><linearGradient id="paint0_linear_18738_10284" x1="1.00026" y1="395.96" x2="1.00026" y2="4.04038" gradientUnits="userSpaceOnUse"><stop offset="0.2" stop-color="white" stop-opacity="0.1"/><stop offset="0.495" stop-color="%2366C2FD"/><stop offset="0.8" stop-color="white" stop-opacity="0.1"/></linearGradient></defs></svg>');
      background-repeat: no-repeat;
      background-size: contain;
      transform: translateY(-50%);
      @media(max-width: 768px) {
        content: none;
      }
    }
    .block__rc:first-child::after {
      content: none;
      display: none;
    }
    h2 {
      color: var(--Content-Inverted-main, #F3F4F6);
      text-align: center;
      font-family: var(--font-family-Title, Archivo);
      font-size: 96px;
      font-style: normal;
      font-weight: 500;
      line-height: 88px; /* 91.667% */
      letter-spacing: -0.96px;
      text-transform: capitalize;
      margin: 0 0 8px;
      background: linear-gradient(217deg, rgba(255, 255, 255, 0.00) 4.11%, rgba(255, 255, 255, 0.20) 85.81%);
      background-clip: text;
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent; 
      -webkit-text-stroke-width: 2px;
      -webkit-text-stroke-color: #ffffff12;           
      @media(max-width: 768px) {
        font-size: 64px;
      }
    }
    p {
      color: var(--Content-Inverted-subtle, #6B7280);
      text-align: center;

      /* UI Controls/Contextual/tagline/small */
      font-family: var(--font-family-Body, Archivo);
      font-size: 16px;
      font-style: normal;
      font-weight: 500;
      line-height: 20px; /* 125% */
      letter-spacing: 0.96px;
      text-transform: uppercase;
      margin: 0;
    }
  }

  @media(max-width: 600px) {
    #shopify-section-{{id}} {
      margin-top: {{section.settings.margin_top_m | append: 'px'}};
      margin-bottom: {{section.settings.margin_bottom_m | append: 'px'}};
      padding-top: {{section.settings.padding_top_m | append: 'px'}};
      padding-bottom: {{section.settings.padding_bottom_m | append: 'px'}};
    }
  }
</style>

<div class="sec-{{ id }}">
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <div class="top-wrapper">
      {% if section.settings.title != blank %}
        <h2 class="title">{{ section.settings.title }}</h2>
      {% endif %}
      {% if section.settings.subtitle != blank %}
        <p class="subtitle">{{ section.settings.subtitle }}</p>
      {% endif %}
    </div>
    <div class="wrapper-{{ id }}">
      <div class="swiper review__cards-{{ id }}">
        <div class="swiper-wrapper">
          {% for block in section.blocks %}
            {% if block.type == 'card' %}
              <div class="swiper-slide">
                <div class="content__wrapper">
                  {% if block.settings.user != blank %}
                    <div class="user__img">
                      {{ block.settings.user | image_url: width: 32 | image_tag }}                
                      <span class="number__">{%unless forloop.index > 10 %}0{% endunless %}{{ forloop.index }}</span>
                    </div>
                  {% endif %}
                  <div>
                  {% if block.settings.text != blank %}
                    <div class="review__info">
                      {% #render 'all-icons', name: 'quote' %}
                      <h3>{{ block.settings.text }}</h3>
                    </div>
                  {% endif %}
                  {% unless block.settings.username == blank %}
                    <div class="user__info">
                      <p class="__username">{{ block.settings.username }}</p>
                      <p class="__tag">{{ block.settings.tag }}</p>
                    </div>
                  {% endunless %}
                  </div>
                </div>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>
    <div class="block-{{ id }}">
      <div class="bloxk__wrap">
        {% for block in section.blocks %}
          {% if block.type == 'block' %}
            <div class="block__rc">
              <h2>{{ block.settings.text }}</h2>
              <p>{{ block.settings.subtext }}</p>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const swiperOptions = {
      slidesPerView: 1.2,
      spaceBetween: 16,
      breakpoints: {
        500: {
          slidesPerView: 1.5,
          spaceBetween: 24,
        },
        850: {
          slidesPerView: 2,
          spaceBetween: 24,
        },
        969: {
          slidesPerView: 2.8,
          spaceBetween: 24,
        },
        1200: {
          slidesPerView: 3,
          spaceBetween: 24,
        },
      },
    };
    new Swiper('.review__cards-{{ id }}.swiper', swiperOptions);
  });
</script>

