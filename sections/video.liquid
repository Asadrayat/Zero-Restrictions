{% liquid
  assign id = section.id
%}

<style>
  #shopify-section-{{id}} {
    box-sizing: border-box;
    margin-top: {{section.settings.margin_top | append: 'px'}};
    margin-bottom: {{section.settings.margin_bottom | append: 'px'}};
    padding-top: {{section.settings.padding_top | append: 'px'}};
    padding-bottom: {{section.settings.padding_bottom | append: 'px'}};
    {% if section.settings.color == "light" %}
      background-color: inherit;
    {% else %}
      background-color: #000;
    {% endif %}        
  }

  @media(max-width: 768px) {
    #shopify-section-{{id}} {
      margin-top: {{section.settings.margin_top_m | append: 'px'}};
      margin-bottom: {{section.settings.margin_bottom_m | append: 'px'}};
      padding-top: {{section.settings.padding_top_m | append: 'px'}};
      padding-bottom: {{section.settings.padding_bottom_m | append: 'px'}};
    }
  }

  #shopify-section-{{id}}{
    .wrapper-{{ id }}{
      display: flex;
      flex-direction: column;
      gap: var(--Spacing-Container-md, 24px);
    }
    .video-wrapper{
     position: relative;
     line-height: 0;
    }
    .video-wrapper video{
      width: 100%;  
      height: auto;
      object-fit: cover;
      border-radius: var(--rounded-2xl, 16px);
      max-height: 640px;
      aspect-ratio: 1;
      @media screen and (max-width: 768px){
        aspect-ratio: 1;       
      }
    }
    .content-container{
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%; 
      z-index: 2;
      display: flex;
     {% if section.settings.alignment == 'top_left' %} 
       justify-content: start;
       align-items: start;
     {% elsif section.settings.alignment == 'top_center' %} 
       justify-content: center;
       align-items: start;
     {% elsif section.settings.alignment == 'top_right' %} 
       justify-content: end;
       align-items: start;      
     {% elsif section.settings.alignment == 'middle_left' %} 
       justify-content: start;
       align-items: center;      
     {% elsif section.settings.alignment == 'middle_center' %} 
       justify-content: center;
       align-items: center;     
     {% elsif section.settings.alignment == 'middle_right' %} 
       justify-content: end;
       align-items: center;      
     {% elsif section.settings.alignment == 'bottom_left' %} 
       justify-content: start;
       align-items: end;      
     {% elsif section.settings.alignment == 'bottom_center' %} 
       justify-content: center;
       align-items: end;      
     {% else %} 
       justify-content: end;
       align-items: end;
     {% endif %} 
      @media screen and (max-width: 768px){
       {% if section.settings.mobile_alignment == 'top_left' %} 
         justify-content: start;
         align-items: start;
       {% elsif section.settings.mobile_alignment == 'top_center' %} 
         justify-content: center;
         align-items: start;
       {% elsif section.settings.mobile_alignment == 'top_right' %} 
         justify-content: end;
         align-items: start;      
       {% elsif section.settings.mobile_alignment == 'middle_left' %} 
         justify-content: start;
         align-items: center;      
       {% elsif section.settings.mobile_alignment == 'middle_center' %} 
         justify-content: center;
         align-items: center;     
       {% elsif section.settings.mobile_alignment == 'middle_right' %} 
         justify-content: end;
         align-items: center;      
       {% elsif section.settings.mobile_alignment == 'bottom_left' %} 
         justify-content: start;
         align-items: end;      
       {% elsif section.settings.mobile_alignment == 'bottom_center' %} 
         justify-content: center;
         align-items: end;      
       {% else %} 
         justify-content: end;
         align-items: end;
       {% endif %}
      }
    }
    .content-wrapper{
      max-width: fit-content;   
      padding: var(--Spacing-Section-Section-Vertical-Padding, 48px) var(--Spacing-Section-Section-Horizontal-Padding, 40px);
      gap: var(--Spacing-Container-sm, 16px);
      display: flex;
      flex-direction: column;
      {% if section.settings.content_alignment == 'left' %}
        align-items: start; 
        text-align: left;
      {% elsif section.settings.content_alignment == 'center' %}
        align-items: center; 
        text-align: center;
      {% elsif section.settings.content_alignment == 'right' %}
        align-items: end; 
        text-align: right;
      {% endif %}
      @media screen and (max-width: 768px){
        padding: var(--Spacing-Container-md, 16px) var(--Spacing-Section-Section-Horizontal-Padding, 16px);        
      }
    }
    .sec--description p{
    {% if section.settings.color == "light" %}
      color: var(--Content-Base-main, #1F2937);
    {% else %}
      color: #F3F4F6;
    {% endif %}  
      /* font-family: var(--font-family-Body, "Neue Plak"); */
      font-size: var(--Font-Size-Paragraph-Medium, 18px);
      font-style: normal;
      font-weight: 400;
      line-height: var(--Line-Height-Paragraph-Medium, 26px); /* 144.444% */  
      margin: 0;
    }
    .sec--description h3{
    {% if section.settings.color == "light" %}
      color: var(--Content-Base-main, #1F2937);
    {% else %}
      color: #F3F4F6;
    {% endif %}  
      /* font-family: var(--font-family-Title, "Neue Plak"); */
      font-size: var(--Font-Size-Heading-H3, 24px);
      font-style: normal;
      font-weight: 400;
      line-height: var(--Line-Height-Heading-H3, 28px); /* 116.667% */     
      margin: 0;
      @media screen and (max-width: 768px){
        line-height: 24px; /* 150% */
        letter-spacing: -0.32px;        
      }
    }
    .sec--description h4{
    {% if section.settings.color == "light" %}
      color: var(--Content-Base-main, #1F2937);
    {% else %}
      color: #F3F4F6;
    {% endif %}  
      /* font-family: var(--font-family-Title, "Neue Plak"); */
      font-size: var(--Font-Size-Heading-H4, 20px);
      font-style: normal;
      font-weight: 400;
      line-height: var(--Line-Height-Heading-H4, 24px); /* 120% */
      letter-spacing: -0.4px;   
      margin: 0;
      @media screen and (max-width: 768px){
        line-height: 24px; /* 150% */
        letter-spacing: -0.32px;        
      }
    }
    .title{
      max-width: 500px;
      color: var(--Content-Inverted-main, #F3F4F6);
      /* font-family: var(--font-family-Title, "Neue Plak"); */
      font-size: var(--Font-Size-Heading-H2, 40px);
      font-style: normal;
      font-weight: 400;
      line-height: var(--Line-Height-Heading-H2, 40px); /* 100% */
      letter-spacing: -0.4px;
      margin: 0;
      @media screen and (max-width: 768px){
        
      }      
    }
    .description{
    {% if section.settings.color == "light" %}
      color: var(--Content-Base-main, #1F2937);
    {% else %}
      color: #F3F4F6;
    {% endif %}  
      /* font-family: var(--font-family-Body, "Neue Plak"); */
      font-size: var(--Font-Size-Paragraph-Medium, 18px);
      font-style: normal;
      font-weight: 400;
      line-height: var(--Line-Height-Paragraph-Medium, 26px); /* 144.444% */  
      margin: 0;    
    }
    
    /* Button */
    .video-btn {
    {% if section.settings.color == "light" %}
      color: var(--Content-Base-main, #1F2937);
    {% else %}
      color: #F3F4F6;
    {% endif %}  
      text-align: center;
      /* font-family: var(--font-family-Body, "Neue Plak"); */
      font-size: var(--Font-Size-UI-Controls-Control-Button-Regular, 20px);
      font-style: normal;
      font-weight: 400;
      line-height: var(--Line-Height-UI-Controls-Control-Button-Regular, 20px); /* 100% */
      text-transform: capitalize;
      display: flex;
      padding: var(--Spacing-Container-xs, 12px) var(--Spacing-Container-lg, 40px) var(--Spacing-Container-sm, 16px) var(--Spacing-Container-lg, 40px);
      justify-content: center;
      align-items: center;
      gap: 8px;
      border-radius: var(--rounded-3xl, 24px);
      border: 2px solid var(--Content-Base-main, #1F2937);
      background: #EEEDF7;
          {% if section.settings.color == "light" %}
      background: #EEEDF7;
    {% else %}
      background: #000;
    {% endif %}  
      @media(max-width: 768px){
        
      }
    }    
    .video-btn::before {
      content: unset;
    }      
  }
</style>

<div class="sec-{{ id }}">
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <div class="wrapper-{{ id }}">
      {% if section.settings.show_des == 'first' %}
        <div class="sec--description">{{ section.settings.text }}</div>
      {% endif %}
      <div class="video-wrapper">
        {% if section.settings.video %}
          {{ section.settings.video | video_tag: autoplay: true, loop: true, muted: true, controls: false }}
        {% endif %}
        {% if section.settings.show_content %}
          <div class="content-container">
            <div class="content-wrapper">
              {% if section.settings.title != blank %}
                <h3 class="title">{{ section.settings.title }}</h3>
              {% endif %}
              {% if section.settings.description != blank %}
                <p class="description">{{ section.settings.description }}</p>
              {% endif %}
              {% if section.settings.label != blank %}
                <a class="video-btn" href="{{ section.settings.url }}">{{ section.settings.label }}</a>
              {% endif %}
            </div>
          </div>
        {% endif %}
      </div>
      {% if section.settings.show_des == 'last' %}
        <div class="sec--description">{{ section.settings.text }}</div>
      {% endif %}
    </div>
  </div>
</div>

