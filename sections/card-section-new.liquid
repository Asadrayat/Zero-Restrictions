{% liquid
  assign id = section.id
%}

<style>
  #shopify-section-{{id}} {
    box-sizing: border-box;
    margin-top: {{section.settings.margin_top | append: 'px'}};
    margin-bottom: {{section.settings.margin_bottom | append: 'px'}};
    padding-top: {{section.settings.padding_top | append: 'px'}};
    padding-bottom: {{section.settings.padding_bottom | append: 'px'}};
    background: #000;

    .top-wrapper {
        margin: 0 0 var(--Spacing-Container-lg);
    }
    .title{
         color: #fff;
        text-align: center;

        /* Headings/H2 */
        font-family: var(--font-family-Title, Archivo);
        font-size: var(--Font-Size-Heading-H2, 40px);
        font-style: normal;
        font-weight: 500;
        line-height: var(--Line-Height-Heading-H2, 40px); /* 100% */
        letter-spacing: -0.4px;
        text-transform: capitalize;
        margin: 0 0 8px;
    }
    .subtitle {
        margin: 0;
         color: #fff;
        text-align: center;

        /* Paragraph/M */
        font-family: var(--font-family-Body, Archivo);
        font-size: var(--Font-Size-Paragraph-Regular, 16px);
        font-style: normal;
        font-weight: 400;
        line-height: var(--Line-Height-Paragraph-Regular, 24px); /* 150% */
    }
    .cns__card {
      border-radius: var(--rounded-xl, 12px);
      border: 1px solid #1F2937;
      background-color: #19181A;
      display: flex;
      padding: var(--Spacing-Container-lg, 32px);
      flex-direction: column;
      align-items: flex-start;
      gap: var(--Spacing-Container-lg, 40px);
      transition: background-color 0.4s ease-in-out;
    }
    .cns__card:hover {
      border: #fff;
      background-color: #fff;      
    }
    .cns__card__content {
        display: flex;
        flex-direction: column;
        gap: 16px;
    }
    .cns__card * {
      color: #D1D5DB;
      margin: 0;
    }
    .cns__card p {
      /* Paragraph/S */
      font-family: var(--font-family-Body, Archivo);
      font-size: var(--Font-Size-Paragraph-Small, 14px);
      font-style: normal;
      font-weight: 400;
      line-height: var(--Line-Height-Paragraph-Small, 20px); /* 142.857% */
    }
    .cns__card a {
      font-weight: 700;
    }
    .cns__card h4.cns__title {
        color: #F3F4F6;
        font-family: var(--font-family-Title, Archivo);
        font-size: var(--Font-Size-Heading-H3, 24px);
        font-style: normal;
        font-weight: 500;
        line-height: var(--Line-Height-Heading-H3, 28px);
        text-transform: capitalize;
        margin: 0;
    }
    .cns__card:hover *{
      color: #000 !important;
    }
    .cns__card .cns_card_img {
      display: flex;
      padding: 16px;
      flex-direction: column;
      align-items: flex-start;
      border-radius: 8px;
      border: 1px solid rgba(255, 255, 255, 0.10);
      background: rgba(255, 255, 255, 0.10);
      max-width: fit-content;
    }
    .cns__card .cns_card_img img {
      aspect-ratio: 1;
      width: 20px;
      height: 20px;
    }
    .cns__card:hover .cns_card_img {
      background: #000;
    }
    .cns__subtitle {
        ul {
            padding-inline-start: 20px;
            margin: 40px 0 0;
        }
        li {
            list-style-type: disc;
        }    
    }
  }
  .wrapper-{{ id }} {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    gap: 24px var(--Spacing-Container-md, 24px);  
    @media(max-width: 1200px) {
        grid-template-columns: 1fr 1fr ;    
    }
    @media(max-width: 600px) {
        grid-template-columns: 1fr ;
    }  
  }
  @media(max-width: 600px) {
    #shopify-section-{{id}} {
      margin-top: {{section.settings.margin_top_m | append: 'px'}};
      margin-bottom: {{section.settings.margin_bottom_m | append: 'px'}};
      padding-top: {{section.settings.padding_top_m | append: 'px'}};
      padding-bottom: {{section.settings.padding_bottom_m | append: 'px'}};
    }
  }
</style>

<div class="sec-{{ id }}">
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <div class="top-wrapper">
      {% if section.settings.title != blank %}
        <h2 class="title">{{ section.settings.title }}</h2>
      {% endif %}
      {% if section.settings.subtitle != blank %}
        <p class="subtitle">{{ section.settings.subtitle }}</p>
      {% endif %}
    </div>
    <div class="wrapper-{{ id }}">
      {% for block in section.blocks %}
        {% if block.type == 'card' %}
          <div class="cns__card">
            <div class="cns_card_img">
              {% unless block.settings.icon == blank %}
                {{ block.settings.icon | image_url: width: block.settings.icon.width | image_tag }}
              {% endunless %}
            </div>
            <div class="cns__card__content">
              <h4 class="cns__title">{{ block.settings.text }}</h4>
              <div class="cns__subtitle">{{ block.settings.rte }}</div>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Card Section New",
  "settings": [
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Full Width Section",
      "default": false
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle"
    },
    {
      "type": "header",
      "content": "Section Spacing Desktop"
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin Top",
      "default": 0
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin Bottom",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Top",
      "default": 48
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 48
    },
    {
      "type": "header",
      "content": "Section Spacing Mobile"
    },
    {
      "type": "range",
      "id": "margin_top_m",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin Top",
      "default": 0
    },
    {
      "type": "range",
      "id": "margin_bottom_m",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin Bottom",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_top_m",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Top",
      "default": 32
    },
    {
      "type": "range",
      "id": "padding_bottom_m",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 32
    }
  ],
  "blocks": [
    {
      "type": "card",
      "name": "Card",
      "limit": 6,
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "icon"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Title",
          "default": "Refund Deadline"
        },
        {
          "type": "richtext",
          "id": "rte",
          "label": "Content"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Card Section New"
    }
  ]
}
{% endschema %}
