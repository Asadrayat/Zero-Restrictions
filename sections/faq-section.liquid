{% liquid
  assign id = section.id
%}

<style>
    #shopify-section-{{id}} {
      box-sizing: border-box;
      margin-top: {{section.settings.margin_top | append: 'px'}};
      margin-bottom: {{section.settings.margin_bottom | append: 'px'}};
      padding-top: {{section.settings.padding_top | append: 'px'}};
      padding-bottom: {{section.settings.padding_bottom | append: 'px'}};
      .heading__shipping{
        margin: 64px 0 24px 0;
      }
      .heading__shipping.mt-0{
        margin: 0 0 24px 0;
      }
    }
    .wrapper-{{ id }} .custom__faq-container {
      width: 65%;
      min-width: 800px;
      @media(max-width: 1200px) {
         min-width: 100%;
         width: auto;
      }
    }
    .wrapper-{{ id }} .accordion__intro_ {
      position: relative;
      cursor: pointer;
      display: flex;
      gap: var(--Spacing-Container-sm);
      box-sizing: border-box;
      transition: all 1s ease-in-out;
      justify-content: space-between;
      padding-bottom: var(--Spacing-Container-sm);
    }
    .wrapper-{{ id }} .accordion__intro_ h4 {
      color: var(--Content-Base-main, #1F2937);
      font-family: var(--font-family-Title);
      font-size: var(--Font-Size-Heading-H4);
      font-style: normal;
      font-weight: 400;
      line-height: var(--Line-Height-Heading-H4); /* 120% */
      letter-spacing: -0.4px;
      margin: 0;
      @media(max-width: 768px) {
        letter-spacing: -0.32px;
        padding-right: 24px;
      }
    }
    .wrapper-{{ id }} .accordion__content {
      position: relative;
      max-height: 0;
      overflow: hidden;
      transition: all 0.4s ease-out;
      opacity: 0;
    }
    .accordion__content-wrap {
      color: var(--Content-Base-base, #4B5563);
      font-family: var(--font-family-Body);
      font-size: var(--Font-Size-Paragraph-Regular);
      font-style: normal;
      font-weight: 400;
      line-height: var(--Line-Height-Paragraph-Regular); /* 150% */
      margin-bottom: var(--Spacing-Container-sm);
      /* padding-right: 24px; */
      @media(max-width: 768px) {
        padding-right: 0px;
        margin-block: 12px 16px;
      }
      p{
        margin: 0;
      }
    }
    .wrapper-{{ id }} .custom__faq-inner-wrapper .accordion__faq {
      border-bottom: 1px solid var(--Border-Base-subtle, #E5E7EB);
    }
    .wrapper-{{ id }} .custom__faq-inner-wrapper .accordion__faq:not(:last-child) {
      margin-bottom: var(--Spacing-Container-sm);
    }
    .wrapper-{{ id }} .faq__icon {
      position: absolute;
      right: 24px;
      top: 0;
    }
    .wrapper-{{ id }} .faq__icon span {
      display: flex;
      width: 24px;
      height: 24px;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      gap: 8px;
      border-radius: 56px;
      /* background: #fff; */
      position: absolute;
      top: 0;
      left: 0;
      transition: all 0.4s ease-in-out;
    }
    .wrapper-{{ id }} .faq__icon .minus {
      opacity: 0;
      transition: all 0.4s ease-in-out;
    }
    .wrapper-{{ id }} .accordion__faq.accordion__active-faq .accordion__content {
      opacity: 1;
    }
    .wrapper-{{ id }} .accordion__faq.accordion.active .faq__icon .plus {
      rotate: 45deg;
      opacity: 0;
    }
    .wrapper-{{ id }} .accordion__faq.accordion.active .faq__icon .minus {
      opacity: 1;
    }

    /* Trigger styling ends............. */
  h2.cf__category_title {
    margin: 0;
  }
  .wrapper-{{ id }} .cf__category-block, .cf__category_title{
      opacity: 0;
      visibility: hidden;
      height: 0;
      overflow: hidden;
      transition: opacity 0.4s ease-in-out, height 0.4s ease-in-out, visibility 0.4s ease-in-out;
  }

  .wrapper-{{ id }} .cf__category-block.active {
      opacity: 1;
      visibility: visible;
      height: auto;
  }

    /* Trigger styling ends............. */

    @media(max-width: 600px) {
      #shopify-section-{{id}} {
        margin-top: {{section.settings.margin_top_m | append: 'px'}};
        margin-bottom: {{section.settings.margin_bottom_m | append: 'px'}};
        padding-top: {{section.settings.padding_top_m | append: 'px'}};
        padding-bottom: {{section.settings.padding_bottom_m | append: 'px'}};
      }
    }
</style>

<div class="sec-{{ id }}">
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <div class="wrapper-{{ id }}">
      <div class="faq_section-{{ id }} custom__faq-wrapper">
        <div class="custom__faq-container">
          <div class="custom__faq-inner-wrapper">
            {% for block in section.blocks %}
              {% if block.type == 'category' %}
                <div
                  class="cf__category-block {% if forloop.first %}active{% endif %}"
                  data-category-block
                  data-category="{{ block.settings.title }}"
                >
                  <h2 class="cf__category_title">{{ block.settings.title }}</h2>
                  <accordion-element>
                    <div class="accordion-wrapper {{ block.settings.title }} accordion-wrapper--{{ section.id }}-{{ block.id }}">
                      {% for faq in section.blocks %}
                        {% if faq.type == 'faq' and faq.settings.category == block.settings.title %}
                          <div
                            data-aos="fade-up"
                            class="accordion__faq accordion"
                            data-faq-section-category
                            data-category="{{ faq.settings.category | strip }}"
                          >
                            <div class="accordion__intro_">
                              <h4 class="faq_title">{{ faq.settings.title }}</h4>
                              <div class="faq__icon">
                                <span class="plus">
                                  {% render 'all-icons', name: 'faq-plus' %}
                                </span>
                                <span class="minus">
                                  {% render 'all-icons', name: 'faq-minus' %}
                                </span>
                              </div>
                            </div>
                            <div class="accordion__content_">
                              <div class="accordion__content-wrap">{{ faq.settings.text }}</div>
                            </div>
                          </div>
                        {% endif %}
                        {% if faq.type == 'heading' and faq.settings.category == block.settings.title %}
                          <h3
                            class="heading__shipping {% unless faq.settings.mt %}mt-0{% endunless %}"
                            data-faq-section-category
                            data-category="{{ faq.settings.category | strip }}"
                          >
                            {{ faq.settings.title }}
                          </h3>
                        {% endif %}
                      {% endfor %}
                    </div>
                  </accordion-element>
                </div>
              {% endif %}
            {% endfor %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="{{ 'custom-accordion.js' | asset_url }}"></script>
<script src="{{ 'faq-script.js' | asset_url }}"></script>

<script>
  {% for block in section.blocks %}
    {% if block.type == 'category' %}
    new Accordion('.accordion-wrapper.accordion-wrapper--{{ section.id }}-{{ block.id }}', {
        closeAll: true,
        initOpenIndex: 1,
        duration: 700,
        activeClass: 'active'
    })
    {% endif %}
    {% endfor %}
</script>

