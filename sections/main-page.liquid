{{ 'section-main-page.css' | asset_url | stylesheet_tag }}

{%- style -%}
    #shopify-section-{{ section.id}} {
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    {% if section.settings.color == "light" %}
      background-color: inherit;
    {% else %}
      background-color: #000;      
    {% endif %}          
    }
  .section-{{ section.id }}-padding {

    h2, h3, h4 , h5, h6 {
      margin: 16px 0 16px 0;      
    }
    svg path {
    {% if section.settings.color == "light" %}
    {% else %}
      fill: #fff;      
    {% endif %}       
    }
  }
  .section-{{ section.id }}-padding *{
      {% if section.settings.color == "light" %}
        color: var(--Content-Base-main, #1F2937);
      {% else %}
        color: #F3F4F6;
      {% endif %}    
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="page-width page-width--narrow_ section-{{ section.id }}-padding">
  <h1 class="main-page-title page-title h0{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
    {{ page.title | escape }}
  </h1>
  <div class="rte{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
    {{ page.content }}
  </div>
</div>

{% schema %}
{
  "name": "t:sections.main-page.name",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "select",
      "id": "color",
      "label": "Color scheme",
      "options": [
        {
          "value": "dark",
          "label": "Dark Mode"
        },
        {
          "value": "light",
          "label": "Light Mode"
        }
      ],
      "default": "light"
    },     
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ]
}
{% endschema %}
