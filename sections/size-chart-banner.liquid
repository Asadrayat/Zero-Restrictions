{% liquid
  assign id = section.id
%}

<style>
  #shopify-section-{{id}} {
    box-sizing: border-box;
    margin-top: {{section.settings.margin_top | append: 'px'}};
    margin-bottom: {{section.settings.margin_bottom | append: 'px'}};
    padding-top: {{section.settings.padding_top | append: 'px'}};
    padding-bottom: {{section.settings.padding_bottom | append: 'px'}};
  }
  .wrapper-{{ id }} .image-wrap img {
    width: 100%;
    object-fit: cover;
  }
  .wrapper-{{ id }} .image-wrap.original img {
    height: auto;
  }
  .wrapper-{{ id }} .image-wrap.adaptive img {
    height: auto;
    aspect-ratio: 4/1;
    @media(max-width: 768px) {
      aspect-ratio: unset;
    }
  }
  .wrapper-{{ id }} .block__wrapper {
    position: relative;
  }
  .wrapper-{{ id }} .content__wrapper  {
    position: absolute;
    width: 100%;
    height: 100%;
    padding: var(--Spacing-Container-lg);
    top: 0;
    left: 0;
  }
  .wrapper-{{ id }} .content {
    display: flex;
    width: 100%;
    height: 100%;
    flex-direction: column;
  }

  /* css for content customization starts ............................................................*/

  .wrapper-{{ id }} .block__wrapper .content.middle_left {
    justify-content: center;
    align-items: start;
    p{
      text-align: left;
    }
  }
  .wrapper-{{ id }} .block__wrapper .content.middle_center {
    justify-content: center;
    align-items: center;
  }
  .wrapper-{{ id }} .block__wrapper .content.middle_right {
    justify-content: center;
    align-items: end;
  }
  .wrapper-{{ id }} .block__wrapper .content.top_left {
    justify-content: start;
    align-items: start;
    p{
      text-align: left;
    }
  }
  .wrapper-{{ id }} .block__wrapper .content.top_center {
    justify-content: start;
    align-items: center;
  }
  .wrapper-{{ id }} .block__wrapper .content.top_right {
    justify-content: start;
    align-items: end;
  }
  .wrapper-{{ id }} .block__wrapper .content.bottom_left {
    justify-content: end;
    align-items: start;
    p{
      text-align: left;
    }
  }
  .wrapper-{{ id }} .block__wrapper .content.bottom_center {
    justify-content: end;
    align-items: center;
  }
  .wrapper-{{ id }} .block__wrapper .content.bottom_right {
    justify-content: end;
    align-items: end;
  }

  /* css for content customization ends ..................................................... */
  .wrapper-{{ id }} .category__wrapper {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 8px;
    max-width: 740px;
    margin: var(--Spacing-Container-lg) auto;
    @media(max-width: 768px) {
      flex-wrap: nowrap;
      overflow: scroll;
      justify-content: flex-start;
      max-width: 100%;
      margin-block: 24px 16px;
      scrollbar-width: thin;
    }
  }
  .wrapper-{{ id }} .block__wrapper p.pretitle {
    /* color: var(--Content-Base-main); */
    text-align: center;
    /* UI Controls/Contextual/tagline/small */
    font-family: var(--font-family-Body);
    font-size: 16px;
    font-style: normal;
    font-weight: 400;
    line-height: 125%;
    letter-spacing: 0.96px;
    text-transform: uppercase;
    margin: 0 0 8px 0;
  }
  .wrapper-{{ id }} .block__wrapper h1 {
    /* color: var(--Content-Base-main); */
    text-align: center;
    font-style: normal;
    font-weight: 400;
    line-height: var(--Line-Height-Heading-H1);
    letter-spacing: -0.48px;
    margin: 0 0 8px 0;
    em{
      display: block;
      font-style: normal;
    }
  }
  .wrapper-{{ id }} .block__wrapper h1.heading-medium {
    font-size: var(--Font-Size-Heading-H1);
  }
  .wrapper-{{ id }} .block__wrapper h1.heading-large {
    font-size: 96px;
    font-family: var(--font-family-Title);
    line-height: 83%;
    @media(max-width: 768px) {
      font-size: 64px;
    }
  }
  .wrapper-{{ id }} .block__wrapper p.subtitle {
    text-align: center;
    font-family: var(--font-family-Body, "Neue Plak");
    font-style: normal;
    font-weight: 400;
    margin: 0;
    em {
      display: block;
      font-style: normal;
      @media(max-width: 768px) {
        display: unset;
      }
    }
  }
  @media(max-width: 768px) {
    #shopify-section-{{id}} {
      margin-top: {{section.settings.margin_top_m | append: 'px'}};
      margin-bottom: {{section.settings.margin_bottom_m | append: 'px'}};
      padding-top: {{section.settings.padding_top_m | append: 'px'}};
      padding-bottom: {{section.settings.padding_bottom_m | append: 'px'}};
    }
    .wrapper-{{ id }} .navigation__btn {
      min-width: max-content;
      max-height: max-content;
    }
    .static__mobile-position {
      position: relative !important;
      transform: unset !important;
      top: unset !important;
      left: unset !important;
      margin: auto;
    }
  }
</style>

<div class="sec-{{ id }}">
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <div class="wrapper-{{ id }} size_chart__banner">
      <style>
        .block__wrapper-{{ section.id }} .info_color-{{ section.id }} {
          color: {{ section.settings.info_color }};
          @media(max-width: 768px) {
            color: {{ section.settings.info_color_m }};
          }
        }
      </style>
      {% assign image = section.settings.image %}
      {% assign image_mobile = section.settings.image_mobile %}
      {% assign pretitle = section.settings.pretitle %}
      {% assign title = section.settings.title %}
      {% assign subtitle = section.settings.subtitle %}
      {% assign button_label_primary = section.settings.btn_label1 %}
      {% assign button_url_primary = section.settings.btn_url1 %}
      {% assign button_label_secondary = section.settings.btn_label2 %}
      {% assign button_url_secondary = section.settings.btn_url2 %}
      {% assign button_label_tertiary = section.settings.btn_label3 %}
      {% assign button_url_tertiary = section.settings.btn_url3 %}
      {% assign mobile_hide = section.settings.hide_image__mobile %}
      <div class="block__wrapper block__wrapper-{{ section.id }}">
        {% if image %}
          <div class="image-wrap {% if mobile_hide %}small-hide{% endif %} {{ section.settings.banner_height }} {% if image_mobile %}small-hide{% endif %}">
            {{ image | image_url: width: image.width | image_tag }}
          </div>
        {% else %}
          <div class="image-wrap {% if mobile_hide %}small-hide{% endif %} {{ section.settings.banner_height }} {% if image_mobile %}small-hide{% endif %}">
            {{ 'image' | placeholder_svg_tag }}
          </div>
        {% endif %}
        {% if image_mobile %}
          <div class="image-wrap {% if section.settings.hide_image__mobile %}small-hide{% endif %} large-up-hide medium-hide {{ section.settings.banner_height }}">
            {{ image_mobile | image_url: width: image_mobile.width | image_tag }}
          </div>
        {% else %}
          <div class="{% if section.settings.hide_image__mobile or image %}small-hide{% endif %} large-up-hide medium-hide">
            {{ 'image' | placeholder_svg_tag }}
          </div>
        {% endif %}
        <div class="content__wrapper {% if mobile_hide %}static__mobile-position{% endif %}">
          <div class="content  {{ section.settings.content_position }}">
            {% if pretitle != blank %}
              <p class="pretitle info_color-{{ section.id }}">{{ pretitle | escape }}</p>
            {% endif %}
            {% if title != blank %}
              <h1 class="heading-{{ section.settings.heading_size }} info_color-{{ section.id }}">{{ title }}</h1>
            {% endif %}
            {% if subtitle != blank %}
              <p class="info_color-{{ section.id }} subtitle {{ section.settings.description_size }}">{{ subtitle }}</p>
            {% endif %}
            {% if button_label_primary != blank or button_label_secondary != blank %}
              <div class="btn__wrapper">
                {% if button_label_primary != blank %}
                  <a class="navigation__btn active" data-size-buttons href="{{ button_url_primary }}">
                    {{- button_label_primary -}}
                  </a>
                {% endif %}
                {% if button_label_secondary != blank %}
                  <a class="navigation__btn" data-size-buttons href="{{ button_url_secondary }}">
                    {{- button_label_secondary -}}
                  </a>
                {% endif %}
                {% if button_label_tertiary != blank %}
                  <a class="navigation__btn" data-size-buttons href="{{ button_url_tertiary }}">
                    {{- button_label_tertiary -}}
                  </a>
                {% endif %}
              </div>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function(){
    var sizeButtons = document.querySelectorAll("[data-size-buttons]")
    sizeButtons.forEach(sizeButton => {
      sizeButton.addEventListener("click", function(){
         sizeButtons.forEach(sizeButton => {
           sizeButton.classList.remove("active")
         })
        sizeButton.classList.add("active")
        // Get the target section ID from the href attribute
      })
    })
  })
</script>

