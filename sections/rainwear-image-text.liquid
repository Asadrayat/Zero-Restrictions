{% liquid
  assign id = section.id
%}

<style>
    #shopify-section-{{id}} {
      box-sizing: border-box;
      margin-top: {{section.settings.margin_top | append: 'px'}};
      margin-bottom: {{section.settings.margin_bottom | append: 'px'}};
      padding-top: {{section.settings.padding_top | append: 'px'}};
      padding-bottom: {{section.settings.padding_bottom | append: 'px'}};
      {% if section.settings.color == "light" %}
        background-color: inherit;
      {% else %}
        background-color: #000;
      {% endif %}      
    }

    @media(max-width: 600px) {
      #shopify-section-{{id}} {
        margin-top: {{section.settings.margin_top_m | append: 'px'}};
        margin-bottom: {{section.settings.margin_bottom_m | append: 'px'}};
        padding-top: {{section.settings.padding_top_m | append: 'px'}};
        padding-bottom: {{section.settings.padding_bottom_m | append: 'px'}};
      }
    }

  .wrapper-{{ id }} {
      display: grid;
      grid-template-columns: repeat(2,1fr);
      align-items: center;
      @media(max-width: 600px) {
        grid-template-columns: 1fr;
        gap: var(--Spacing-Container-lg, 24px);
      }


  .--image-wrapper {
      /* border-radius: var(--rounded-lg, 8px); */
      overflow: hidden;
      @media(max-width: 600px) {
         grid-row: 1/2;
       }
    img {
      width: 100%;
      height: auto;
      object-fit: cover;
    }

  }
  .--image-wrapper.potraite img{
    aspect-ratio: 4/5;
  }
  .--image-wrapper.square img{
    aspect-ratio: 1;
  }

  .--text-block-container.--text-first {
      padding-right: var(--Spacing-Container-lg);
       @media(max-width: 600px) {
         padding-right: unset;
       }
  }
  .--text-block-container.--text-last {
      padding-left: var(--Spacing-Container-lg);
      @media(max-width: 600px) {
         padding-left: unset;
       }
  }

  h2.--title {
      {% if section.settings.color == "light" %}
        color: var(--Content-Base-main, #1F2937);
      {% else %}
        color: #F3F4F6;
      {% endif %}
    font-family: var(--font-family-Title, "Neue Plak");
    font-size: var(--Font-Size-Heading-H3, 24px);
    font-style: normal;
    font-weight: 700;
    line-height: var(--Line-Height-Heading-H3, 28px);
    margin: 0 0 24px;
    em {
      display: block;
      font-style: unset;
      @media(max-width: 600px) {
        display: unset;
      }
    }
  }
  a.button {
      {% if section.settings.color == "light" %}

      {% else %}
    color: #000;
    background: #F3F4F6;
      {% endif %}
  }
  .--content {
      margin-block: var(--Spacing-Container-xs) var(--Spacing-Container-md);
      {% if section.settings.color == "light" %}
        color: var(--Content-Base-main, #1F2937);
      {% else %}
        color: #F3F4F6;
      {% endif %}      font-family: var(--font-family-Body, "Neue Plak");
      font-size: var(--Font-Size-Paragraph-Small, 14px);
      font-style: normal;
      font-weight: 400;
      line-height: var(--Line-Height-Paragraph-Small, 20px);
      h4 {
        margin: 0 0 8px;
      }
      p{
        margin: 0 0 16px;
      }
  }







  .--icon-card-container {
      display: flex;
      gap: var(--Spacing-Container-lg);
  }
  .--card-wrapper {
      text-align: center;
      {% if section.settings.color == "light" %}
        color: var(--Content-Base-main, #1F2937);
      {% else %}
        color: #F3F4F6;
      {% endif %}      font-family: var(--font-family-Body, "Neue Plak");
      font-size: var(--Font-Size-Paragraph-Small, 14px);
      font-style: normal;
      font-weight: 400;
      line-height: var(--Line-Height-Paragraph-Small, 20px);
      img {
        max-width: 50px;
        aspect-ratio: 1;
        margin: 0 auto var(--Spacing-Container-xs);
      }
  }
  }
</style>

<div class="sec-{{ id }}">
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <div class="wrapper-{{ id }}">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'image' %}
            <div class="--image-wrapper {{ block.settings.image_shape }}">
              {{ block.settings.image | image_url: width: block.settings.image.width | image_tag }}
            </div>
          {% when 'text' %}
            <div class="--text-block-container {% if forloop.first %} --text-first {% else %}--text-last{% endif %}">
              <h2 class="--title">{{ block.settings.title }}</h2>
              <div class="--content">{{ block.settings.content }}</div>
              {% unless block.settings.btn_label == blank %}
                <a class="button" href="{{ block.settings.btn_url }}">{{ block.settings.btn_label }}</a>
              {% endunless %}
            </div>
        {% endcase %}
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Rainwear Image Text ",
  "settings": [
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Full Width Section",
      "default": false
    },
    {
      "type": "select",
      "id": "color",
      "label": "Color scheme",
      "options": [
        {
          "value": "dark",
          "label": "Dark Mode"
        },
        {
          "value": "light",
          "label": "Light Mode"
        }
      ],
      "default": "light"
    },     
    {
      "type": "header",
      "content": "Section Spacing Desktop"
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin Top",
      "default": 0
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin Bottom",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Top",
      "default": 48
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 48
    },
    {
      "type": "header",
      "content": "Section Spacing Mobile"
    },
    {
      "type": "range",
      "id": "margin_top_m",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin Top",
      "default": 0
    },
    {
      "type": "range",
      "id": "margin_bottom_m",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin Bottom",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_top_m",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Top",
      "default": 32
    },
    {
      "type": "range",
      "id": "padding_bottom_m",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 32
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "limit": 1,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "radio",
          "id": "image_shape",
          "label": "Image Shape",
          "options": [
            {
              "value": "square",
              "label": "Square"
            },
            {
              "value": "potraite",
              "label": "Potrait"
            }
          ],
          "default": "square"
        }
      ]
    },
    {
      "type": "text",
      "name": "Text Block",
      "limit": 1,
      "settings": [
        {
          "type": "inline_richtext",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "Content"
        },
        {
          "type": "text",
          "id": "btn_label",
          "label": "Button Label",
          "default": "Shop Z2000"
        },
        {
          "type": "url",
          "id": "btn_url",
          "label": "Button Url"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Rainwear Image Text "
    }
  ]
}
{% endschema %}
