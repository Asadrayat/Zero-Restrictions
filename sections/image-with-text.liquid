{% liquid
  assign id = section.id
%}

<style>
  #shopify-section-{{id}} {
    box-sizing: border-box;
    margin-top: {{section.settings.margin_top | append: 'px'}};
    margin-bottom: {{section.settings.margin_bottom | append: 'px'}};
    padding-top: {{section.settings.padding_top | append: 'px'}};
    padding-bottom: {{section.settings.padding_bottom | append: 'px'}};
    {% if section.settings.color == "light" %}
      background-color: inherit;
    {% else %}
      background-color: #000;
    {% endif %}        
  }

  @media(max-width: 768px) {
    #shopify-section-{{id}} {
      margin-top: {{section.settings.margin_top_m | append: 'px'}};
      margin-bottom: {{section.settings.margin_bottom_m | append: 'px'}};
      padding-top: {{section.settings.padding_top_m | append: 'px'}};
      padding-bottom: {{section.settings.padding_bottom_m | append: 'px'}};
    }
  }

  #shopify-section-{{id}} {
    .wrapper-{{ id }}{
      display: flex;
      flex-direction: column;
      gap: var(--Spacing-Container-md);
    }
    .text-block-wrapper{
      display: flex;
      flex-direction: column;
      gap: var(--Spacing-Container-xs);
      {% if section.settings.text_width %}
        width: 50%;
      {% endif %}
      @media(max-width: 768px){
        width: 100%;
      }
    }
    .title{
    {% if section.settings.color == "light" %}
      color: var(--Content-Base-main, #1F2937);
    {% else %}
      color: #F3F4F6;
    {% endif %}  
      margin: 0;
    }
    .title.h2{
    {% if section.settings.color == "light" %}
      color: var(--Content-Base-main, #1F2937);
    {% else %}
      color: #F3F4F6;
    {% endif %}        
      /* font-family: var(--font-family-Title, "Neue Plak"); */
      font-size: var(--Font-Size-Heading-H2, 40px);
      font-style: normal;
      font-weight: 400;
      line-height: var(--Line-Height-Heading-H2, 40px);
      letter-spacing: -0.4px;
      @media(max-width: 768px){
        letter-spacing: -0.24px;
      }
    }
    .title.h3{
    {% if section.settings.color == "light" %}
      color: var(--Content-Base-main, #1F2937);
    {% else %}
      color: #F3F4F6;
    {% endif %}  
      /* Headings/H3 */
      font-family: var(--font-family-Title, Archivo);
      font-size: var(--Font-Size-Heading-H3, 24px);
      font-style: normal;
      font-weight: 500;
      line-height: var(--Line-Height-Heading-H3, 28px); /* 116.667% */
    }
    .text-block-wrapper h4{
    {% if section.settings.color == "light" %}
      color: var(--Content-Base-main, #1F2937);
    {% else %}
      color: #F3F4F6;
    {% endif %}  
      /* font-family: var(--font-family-Title, "Neue Plak"); */
      font-size: var(--Font-Size-Heading-H4, 20px);
      font-style: normal;
      font-weight: 400;
      line-height: var(--Line-Height-Heading-H4, 24px);
      letter-spacing: -0.4px;
      margin: 0;
      @media(max-width: 768px){
        letter-spacing: -0.32px;
      }
    }
    .text-block-wrapper p{
    {% if section.settings.color == "light" %}
      color: var(--Content-Base-main, #1F2937);
    {% else %}
      color: #F3F4F6;
    {% endif %}  
      margin: 0;
    }
    .img-wrapper img{
      width: 100%;
      height: auto;
      object-fit: cover;
      border-radius: var(--rounded-2xl, 16px);
    }
    .desktop-img{
      @media(max-width: 768px){
        display: none;
      }
    }
    .mbl-img{
      display: none;
      @media(max-width: 768px){
        display: block;
      }
    }
  }
</style>

<div class="sec-{{ id }}">
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <div class="wrapper-{{ id }}">
      {% for block in section.blocks %}
        {% if block.type == 'text_block' %}
          <div class="text-block-wrapper">
            {% if block.settings.title != blank %}
              <h2 class="title {{ block.settings.heading_size }}">{{ block.settings.title }}</h2>
            {% endif %}
            {% if block.settings.des != blank %}
              <div class="{{ block.settings.description_size }}">{{ block.settings.des }}</div>
            {% endif %}
          </div>
        {% elsif block.type == 'image' %}
          <div class="img-wrapper">
            {% if block.settings.image != null %}
              {{
                block.settings.image
                | image_url: width: block.settings.image.width
                | image_tag: class: 'desktop-img'
              }}
            {% endif %}
            {% if block.settings.image_mbl != null %}
              {{
                block.settings.image_mbl
                | image_url: width: block.settings.image_mbl.width
                | image_tag: class: 'mbl-img'
              }}
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Image With Text",
  "settings": [
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Full Width Section",
      "default": false
    },
    {
      "type": "select",
      "id": "color",
      "label": "Color scheme",
      "options": [
        {
          "value": "dark",
          "label": "Dark Mode"
        },
        {
          "value": "light",
          "label": "Light Mode"
        }
      ],
      "default": "light"
    },       
    {
      "type": "checkbox",
      "id": "text_width",
      "label": "Text Section Half Width",
      "default": false
    },
    {
      "type": "header",
      "content": "Section Spacing Desktop"
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin Top",
      "default": 0
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin Bottom",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Top",
      "default": 48
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 48
    },
    {
      "type": "header",
      "content": "Section Spacing Mobile"
    },
    {
      "type": "range",
      "id": "margin_top_m",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin Top",
      "default": 0
    },
    {
      "type": "range",
      "id": "margin_bottom_m",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin Bottom",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_top_m",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Top",
      "default": 32
    },
    {
      "type": "range",
      "id": "padding_bottom_m",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 32
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "image_picker",
          "id": "image_mbl",
          "label": "Mobile Image"
        }
      ]
    },
    {
      "type": "text_block",
      "name": "Text",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "select",
          "id": "heading_size",
          "label": "Heading Size",
          "options": [
            {
              "value": "h3",
              "label": "H3"
            },
            {
              "value": "h2",
              "label": "H2"
            },
          ],
          "default": "h2"
        },
        {
          "type": "richtext",
          "id": "des",
          "label": "Description"
        },
        {
          "type": "select",
          "id": "description_size",
          "label": "Description Size",
          "options": [
            {
              "value": "paragraph__large",
              "label": "Large"
            },
            {
              "value": "paragraph__medium",
              "label": "Medium"
            },
            {
              "value": "paragraph__regular",
              "label": "Regular"
            },
            {
              "value": "paragraph__small",
              "label": "Small"
            },
            {
              "value": "paragraph__tiny",
              "label": "Tiny"
            },
          ],
          "default": "paragraph__large"
        },
      ]
    }
  ],
  "presets": [
    {
      "name": "Image With Text"
    }
  ]
}
{% endschema %}
