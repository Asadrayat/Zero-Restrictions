{% liquid
  assign id = section.id
%}

<style>
  #shopify-section-{{id}} {
    box-sizing: border-box;
    margin-top: {{section.settings.margin_top | append: 'px'}};
    margin-bottom: {{section.settings.margin_bottom | append: 'px'}};
    padding-top: {{section.settings.padding_top | append: 'px'}};
    padding-bottom: {{section.settings.padding_bottom | append: 'px'}};
  }
  .wrapper-{{ id }} .image-wrap img {
    width: 100%;
    object-fit: cover;
  }
  .wrapper-{{ id }} .image-wrap.original img {
    height: auto;
  }
  .wrapper-{{ id }} .image-wrap.adaptive img {
    height: auto;
    aspect-ratio: 4/1;
    @media(max-width: 768px) {
      aspect-ratio: unset;
    }
  }
  .wrapper-{{ id }} .image-wrap.adaptive img {
    height: auto;
    aspect-ratio: 4/1;
    @media(max-width: 768px) {
      aspect-ratio: unset;
    }
  }
  .wrapper-{{ id }} .block__wrapper {
    position: relative;
  }
  .wrapper-{{ id }} .content__wrapper  {
    position: absolute;
    width: 100%;
    height: 100%;
    padding: var(--Spacing-Container-lg);
    top: 0;
    left: 0;
  }
  .wrapper-{{ id }} .content {
    display: flex;
    width: 100%;
    height: 100%;
    flex-direction: column;
  }
  .wrapper-{{ id }} .content__info {
    display: flex;
    flex-direction: column;
  }

  /* css for content customization starts ............................................................*/

  .wrapper-{{ id }} .block__wrapper .content.middle_left {
    justify-content: center;
    align-items: start;
    p{
      /* text-align: left; */
    }
  }
  .wrapper-{{ id }} .block__wrapper .content.middle_center {
    justify-content: center;
    align-items: center;
  }
  .wrapper-{{ id }} .block__wrapper .content.middle_right {
    justify-content: center;
    align-items: end;
  }
  .wrapper-{{ id }} .block__wrapper .content.top_left {
    justify-content: start;
    align-items: start;
    p{
      /* text-align: left; */
    }
  }
  .wrapper-{{ id }} .block__wrapper .content.top_center {
    justify-content: start;
    align-items: center;
  }
  .wrapper-{{ id }} .block__wrapper .content.top_right {
    justify-content: start;
    align-items: end;
  }
  .wrapper-{{ id }} .block__wrapper .content.bottom_left {
    justify-content: end;
    align-items: start;
    p{
      /* text-align: left; */
    }
  }
  .wrapper-{{ id }} .block__wrapper .content.bottom_center {
    justify-content: end;
    align-items: center;
  }
  .wrapper-{{ id }} .block__wrapper .content.bottom_right {
    justify-content: end;
    align-items: end;
  }

  /* css for content customization ends ..................................................... */
  .wrapper-{{ id }} .block__wrapper p.pretitle {
    /* color: var(--Content-Base-main); */
    /* text-align: center; */
    /* UI Controls/Contextual/tagline/small */
    font-family: var(--font-family-Body);
    font-size: 16px;
    font-style: normal;
    font-weight: 400;
    line-height: 125%;
    letter-spacing: 0.96px;
    text-transform: uppercase;
    margin: 0 0 8px 0;
  }
  .wrapper-{{ id }} .block__wrapper h1 {
    /* color: var(--Content-Base-main); */
    /* text-align: center; */
    font-style: normal;
    font-weight: 400;
    line-height: var(--Line-Height-Heading-H1);
    letter-spacing: -0.48px;
    margin: 0 0 8px 0;
    em{
      display: block;
      font-style: normal;
    }
  }
  .wrapper-{{ id }} .block__wrapper h1.heading-medium {
    font-size: var(--Font-Size-Heading-H1);
  }
  .wrapper-{{ id }} .block__wrapper h1.heading-large {
    font-size: 96px;
    font-family: var(--font-family-Title);
    line-height: 83%;
    @media(max-width: 768px) {
      font-size: 64px;
    }
  }
  .wrapper-{{ id }} .block__wrapper p.subtitle {
    /* text-align: center; */
    font-family: var(--font-family-Body, "Neue Plak");
    font-style: normal;
    font-weight: 400;
    margin: 0;
    em {
      display: block;
      font-style: normal;
      @media(max-width: 768px) {
        display: unset;
      }
    }
  }
  @media(max-width: 768px) {
    #shopify-section-{{id}} {
      margin-top: {{section.settings.margin_top_m | append: 'px'}};
      margin-bottom: {{section.settings.margin_bottom_m | append: 'px'}};
      padding-top: {{section.settings.padding_top_m | append: 'px'}};
      padding-bottom: {{section.settings.padding_bottom_m | append: 'px'}};
    }
    .wrapper-{{ id }} .btn__wrapper a {
      /* min-width: 170px; */
    }
    .static__mobile-position {
      padding-top: 80px !important;
      position: relative !important;
      transform: unset !important;
      top: unset !important;
      left: unset !important;
      margin: auto;
    }
  }

.--custom-size-chart-container{
  .button {
    border: 1px solid rgba(209, 213, 219, 0.50);
    background: rgba(0, 0, 0, 0.20);
    color: #292D37;
  }
  .button:hover {
    border: 1px solid var(--Border-Base-subtle, #E5E7EB);
    background: var(--Background-base, #FFF);
    color: var(--Content-Base-main, #1F2937);
  }
  .button.active {
    border: 1px solid var(--Border-Base-subtle, #E5E7EB);
    background: var(--Background-base, #FFF);
    color: var(--Content-Base-main, #1F2937);
  }
}
</style>

<div class="sec-{{ id }} --custom-size-chart-container">
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <div class="wrapper-{{ id }}">
      {% for block in section.blocks %}
                  {% if block.type == 'image' %}
        <style>
          .block__wrapper-{{ section.id }} .info_color-{{ block.id }} {
            color: {{ block.settings.info_color }};
            @media(max-width: 768px) {
              color: {{ block.settings.info_color_m }};
            }
          }
          .block__wrapper-{{ section.id }} .btn__wrapper a {
            /* color: {{ block.settings.btn_color }}; */
            /* background-color : {{ block.settings.btn_bgcolor }}; */
          }
          .block__wrapper-{{ section.id }} .image-wrap {
            filter: brightness({{ block.settings.image_overlay_opacity | append:'%' }});
          }
          @media(min-width: 601px) {
            {% if  block.settings.content_width != blank %}
            .block__wrapper-{{ section.id }} .content__info-{{ block.id }}{
              max-width: {{ block.settings.content_width | append: 'px' }};
            }
            {% endif %}
          }
        </style>
        {% assign image = block.settings.image %}
        {% assign image_mobile = block.settings.image_mobile %}
        {% assign pretitle = block.settings.pretitle %}
        {% assign title = block.settings.title %}
        {% assign subtitle = block.settings.subtitle %}
        {% assign button_label_primary = block.settings.btn_label1 %}
        {% assign button_url_primary = block.settings.btn_url1 %}
        {% assign button_label_secondary = block.settings.btn_label2 %}
        {% assign button_url_secondary = block.settings.btn_url2 %}
        {% assign mobile_hide = block.settings.hide_image__mobile %}
        <div class="block__wrapper block__wrapper-{{ section.id }}">
          {% if image %}
            <div class="image-wrap {% if mobile_hide %}small-hide{% endif %} {{ section.settings.banner_height }} {% if image_mobile %}small-hide{% endif %}">
              {{ image | image_url: width: image.width | image_tag }}
            </div>
          {% else %}
            <div class="image-wrap {% if mobile_hide %}small-hide{% endif %} {{ section.settings.banner_height }} {% if image_mobile %}small-hide{% endif %}">
              {{ 'hero-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
            </div>
          {% endif %}
          {% if image_mobile %}
            <div class="image-wrap {% if block.settings.hide_image__mobile %}small-hide{% endif %} large-up-hide medium-hide {{ section.settings.banner_height }}">
              {{ image_mobile | image_url: width: image_mobile.width | image_tag }}
            </div>
          {% else %}
            <div class="{% if block.settings.hide_image__mobile or image %}small-hide{% endif %} large-up-hide medium-hide">
              {{ 'hero-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
            </div>
          {% endif %}
          <div class="content__wrapper {% if mobile_hide %}static__mobile-position{% endif %}">
            <div class="content  {{ section.settings.content_position }}">
              <div class="content__info content__info-{{ block.id }}">
                {% if pretitle != blank %}
                  <p class="pretitle info_color-{{ block.id }} {{ block.settings.info_align }}">
                    {{ pretitle | escape }}
                  </p>
                {% endif %}
                {% if title != blank %}
                  <h1 class="heading-{{ block.settings.heading_size }} {{ block.settings.info_align }} info_color-{{ block.id }}">
                    {{ title }}
                  </h1>
                {% endif %}
                {% if subtitle != blank %}
                  <p class="info_color-{{ block.id }} {{ block.settings.info_align }} subtitle {{ block.settings.description_size }}">
                    {{ subtitle }}
                  </p>
                {% endif %}
                {% if button_label_primary != blank or button_label_secondary != blank %}
                  <div class="btn__wrapper justify-{{ block.settings.info_align }}">
                    {% if button_label_primary != blank %}
                      <a class="button" href="{{ button_url_primary }}">{{ button_label_primary }}</a>
                    {% endif %}
                    {% if button_label_secondary != blank %}
                      <a class="button" href="{{ button_url_secondary }}">{{ button_label_secondary }}</a>
                    {% endif %}
                  </div>
                {% endif %}

        {% comment %} <ul class="first-level btn__wrapper justify-{{ block.settings.info_align }}">
            <li data-tab="men" class="active button">Men</li>
            <li data-tab="women" class="button">Women</li>
        </ul> {% endcomment %}

      <ul class="first-level btn__wrapper justify-{{ block.settings.info_align }}">
        {% for block in section.blocks %}
          {% if block.type == 'tab' %}
            {% assign first_level_id = block.settings.title | handleize %}
            <li data-tab="{{ first_level_id }}" class="button {% if forloop.first %}active{% endif %}">{{ block.settings.title }}</li>
          {% endif %}
        {% endfor %}
      </ul>


              </div>
            </div>
          </div>
        </div>
    {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

