{% liquid
  assign id = section.id
  assign product_cards = product.metafields.custom.product_card.value
%}
{% unless product_cards == blank %}
  <style>
        #shopify-section-{{id}} {
          box-sizing: border-box;
          margin-top: {{section.settings.margin_top | append: 'px'}};
          margin-bottom: {{section.settings.margin_bottom | append: 'px'}};
          padding-top: {{section.settings.padding_top | append: 'px'}};
          padding-bottom: {{section.settings.padding_bottom | append: 'px'}};
          overflow: hidden;
          {% if section.settings.color == "light" %}
            background-color: #fff;
          {% else %}
            background-color: #242424;
          {% endif %}
        }

        @media(max-width: 768px) {
          #shopify-section-{{id}} {
            margin-top: {{section.settings.margin_top_m | append: 'px'}};
            margin-bottom: {{section.settings.margin_bottom_m | append: 'px'}};
            padding-top: {{section.settings.padding_top_m | append: 'px'}};
            padding-bottom: {{section.settings.padding_bottom_m | append: 'px'}};
          }
        }
        #shopify-section-{{id}}{
          .title{
            max-width: 544px;
            color: var(--Content-Base-main);
            /* font-family: var(--font-family-Title, "Neue Plak"); */
            font-size: var(--Font-Size-Heading-H2);
            font-style: normal;
            font-weight: 400;
            line-height: var(--Line-Height-Heading-H2);
            letter-spacing: -0.4px;
            text-transform: capitalize;
            margin: 0 0 var(--Spacing-Container-lg);
            {% if section.settings.color == "light" %}
              color: var(--Content-Base-main);
            {% else %}
              color: var(--Content-Inverted-main);
            {% endif %}
          }
          .card-grid-container{
            display: grid;
            grid-template-columns: repeat(3, minmax(0,1fr));
            gap: var(--Spacing-Container-sm, 16px);
            @media(max-width: 768px){
              grid-template-columns: minmax(0,1fr);
            }
          }
          /* Swiper Navigation */
          .content-list-wrapper{
            position: relative;
          }
          .swiper-button-next:after,
          .swiper-button-prev:after {
            content: 'none';
          }
          .swiper-button-next.swiper-button-disabled, .swiper-button-prev.swiper-button-disabled{
            display: none!important;
          }
          #slider-next--{{ section.id }} {
            color: #000;
            width: 40px;
            height: 40px;
            position: absolute;
            right: 0;
            top: 50%;
            display: flex;
            padding: 8px;
            align-items: center;
            border-radius: var(--rounded-full, 999999px);
            background: #FFF;
            box-shadow: 0px 1px 2px -1px rgba(0, 0, 0, 0.10), 0px 1px 3px 0px rgba(0, 0, 0, 0.10);
            transform: translateX(50%);
            z-index: 2;
            @media(max-width: 768px){
              transform: unset;
            }
          }
          #slider-next--{{ section.id }} svg{
            width: 24px;
            height: 24px;
          }
         #slider-prev--{{ section.id }}{
            color: #000;
            width: 40px;
            height: 40px;
            position: absolute;
            left: 0;
            top: 50%;
            display: flex;
            padding: 8px;
            align-items: center;
            border-radius: var(--rounded-full, 999999px);
            background: #FFF;
            box-shadow: 0px 1px 2px -1px rgba(0, 0, 0, 0.10), 0px 1px 3px 0px rgba(0, 0, 0, 0.10);
            transform: translateX(-50%);
            z-index: 2;
            @media(max-width: 768px){
              transform: unset;
            }
         }
         #slider-prev--{{ section.id }} svg{
            width: 24px;
            height: 24px;
         }
        .swiper:not(.swiper-initialized) .swiper-slide {
            max-width: calc(var(--page-width)/{{ section.settings.slides_per_view }}) !important;
            margin-right: 16px;
            overflow: hidden;
            @media(max-width: 768px){
              max-width: calc(var(--page-width)/{{ section.settings.slides_per_view_mbl }}) !important;
            }
        }
      }



    .sec-{{ id }}{
    .--navigation-wrapper {
            position: relative;
            margin-block: 20px;
            display: flex;
            gap: 5px;
          }
        .--arrow-wrapper {
            display: flex;
            gap: 10px;
          @media(max-width: 600px){
            display: none;
          }
        }

        .--scrollbar-wrapper{
          position: relative;
        }

       .--nav-icon {
            width: 40px;
            height: 40px;
            display: flex;
           {% if section.settings.color == "light" %}
              background: #fff;
             {% else %}
              background: #ffffffd1;
             {% endif %}

            line-height: 1;
            /* position: absolute; */
            top: 50%;
            z-index: 1;
            border-radius: 50%;
            align-items: center;
            justify-content: center;
            /* transform: translateY(-50%); */
            box-shadow: 0px 1px 2px -1px rgba(0, 0, 0, 0.10), 0px 1px 3px 0px rgba(0, 0, 0, 0.10);
            cursor: pointer;
            z-index: 2;
        }

       {% if section.settings.color == "light" %}
              .--nav-icon:hover {
                @media(min-width: 769px){
                background: rgba(0, 0, 0, 0.32);
                }
              }
        {% else %}
            .--nav-icon:hover {
              @media(min-width: 769px){
                background: #fff;
              }
            }
          {% endif %}


        .--nav-icon.swiper-button-disabled {
            /* display: none; */
            opacity: 0.5;
        }
        .--nav-icon.swiper-button-disabled.swiper-button-lock {
           display: none;
        }

    .swiper-scrollbar-{{ section.id }} {
          position: relative !important;
          top: 19px;
          left: 10px !important;
          bottom: unset !important;
          /* margin: var(--Spacing-Container-xl) 0 0 0; */
          height: 2px !important;
          opacity: 1 !important;
          width: 300px !important;
          cursor: pointer;
          /* padding-block: 8px; */
          {% if section.settings.color == "light" %}
            background: transparent;
          {% else %}
            background: #ffffff59;
          {% endif %}

          @media(max-width: 600px){
            width: 100% !important;
            /* width: 250px !important; */
          }


          .swiper-scrollbar-drag {

            {% if section.settings.color == "light" %}
             background: #00094b;
            {% else %}
              background: #fff;
            {% endif %}
            display: block !important;
            height: 2px;
          }
        }
        .swiper-scrollbar-{{ section.id }}::before {
          position: absolute;
          content: "";
          background: var(--swiper-scrollbar-bg-color, rgba(0, 0, 0, .1));
          top: 0;
          left: 0;
          width: 100%;
          height: 2px;
        }

    }

    .cb2__media{

    }
    .cb2__media img{
      /* display: block;
      width: 100%;
      height: 100%;
      object-fit: cover;
      aspect-ratio: 8 / 9;
      object-position: center; */
      display: block;
      width: 100%;
      height: 100%;
      object-fit: cover;
      object-position: center;
    }
    .cb2__card-wrapper {
      position: relative;
    }
    .cb2__texts{
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      margin: 0;
      display: flex;
      justify-content: center;
      align-items: center;
    }
    .cb2__texts-wrap {
        padding: var(--Spacing-Container-md);
    }
    .cb2__texts h3{
      color: #FFF;
      text-align: center;
      font-family: var(--font-family-Title, Archivo);
      font-size: 36px;
      font-style: normal;
      font-weight: 800;
      line-height: 40px;
      margin: 0 0 24px;
    }
    .cb2__texts p{
      /* font-size: 19px;
      line-height: 29px;
      color: #000; */
      color: #FFF;
      text-align: center;
      font-family: var(--font-family-Body, Archivo);
      font-size: var(--Font-Size-Paragraph-Regular, 16px);
      font-style: normal;
      font-weight: 400;
      line-height: var(--Line-Height-Paragraph-Regular, 24px);
    }

    @media screen and (max-width: 768px){
      .cb2__texts{
        /* margin: 16px 0 0; */
      }
      .cb2__texts h3{
        font-size: 26px;
        line-height: 29px;
        margin: 0 0 8px;
      }
      .cb2__texts p{
        font-size: 16px;
        line-height: 24px;
      }
    }
  </style>

  <div class="sec-{{ id }}" id="content-list--{{ id }}">
    <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
      <div class="wrapper-{{ id }}">
        <div class="top-wrapper">
          {% if section.settings.title != blank %}
            <h2 class="title">{{ section.settings.title }}</h2>
          {% endif %}
        </div>
        <div class="content-list-wrapper">
          {% if section.settings.enable_slider == true %}
            <div class="swiper swiper-{{ section.id }}">
              <div class="swiper-wrapper">
                {% for block in section.blocks %}
                  {% if product_cards[forloop.index0] != blank %}
                    {% assign card_title = product_cards[forloop.index0] | split: '#' | first %}
                    {% assign card_content = product_cards[forloop.index0] | split: '#' | last %}
                    {% comment %}
                        {% assign card_title = product_cards[forloop.index0] | split: '#' | first %}
                        {% assign card_content = product_cards[forloop.index0] | split: '#' | last %}
                      {% else %}
                        {% assign card_title = '' %}
                        {% assign card_content = '' %}
                    {% endcomment %}

                    <div class="swiper-slide">
                      {% if block.type == 'card' %}
                        {% render 'content-block-card-2',
                          title: card_title,
                          des: card_content,
                          image: block.settings.image,
                          block: block,
                          section: section
                        %}
                        {% comment %}
                          {% render 'content-block-card-2',
                            title: block.settings.title,
                            des: block.settings.des,
                            image: block.settings.image,
                            block: block
                          %}
                        {% endcomment %}
                      {% endif %}
                    </div>
                  {% endif %}
                {% endfor %}
              </div>
            </div>
            {% comment %}
                <div class="swiper-button-next" id="slider-next--{{ section.id }}">
                {% render 'all-icons', name: 'right_arrow' %}
              </div>
              <div class="swiper-button-prev" id="slider-prev--{{ section.id }}">
                {% render 'all-icons', name: 'left_arrow' %}
              </div>
            {% endcomment %}

          {% else %}
            <div class="card-grid-container">
              {% for block in section.blocks %}
                {% if product_cards[forloop.index0] != blank %}
                  {% assign card_title = product_cards[forloop.index0] | split: '#' | first %}
                  {% assign card_content = product_cards[forloop.index0] | split: '#' | last %}
                {% else %}
                  {% assign card_title = '' %}
                  {% assign card_content = '' %}
                {% endif %}
                <div class="card-grid">
                  {% if block.type == 'card' %}
                    {% render 'content-block-card-2',
                      title: card_title,
                      des: card_content,
                      image: block.settings.image,
                      block: block
                    %}
                  {% endif %}
                </div>
              {% endfor %}
            </div>
          {% endif %}
        </div>
        <div class="--navigation-wrapper">
          <div class="--arrow-wrapper">
            <div class="prev-{{ section.id }} --nav-icon">
              {% render 'all-icons', name: 'left_arrow' %}
            </div>
            <div class="next-{{ section.id }} --nav-icon">
              {% render 'all-icons', name: 'right_arrow' %}
            </div>
          </div>
          <div class="swiper-scrollbar-{{ section.id }} swiper-scrollbar"></div>
          <div class="--scrollbar-wrapper"></div>
        </div>
      </div>
    </div>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', function () {
      new Swiper(".swiper-{{ section.id }}", {
        slidesPerView: {{ section.settings.slides_per_view_mbl }},
        spaceBetween: 12,
        breakpoints: {
          768: {
            slidesPerView: {{ section.settings.slides_per_view }},
            spaceBetween: 32,
          },
        },
         navigation: {
            nextEl: '.next-{{ section.id }}',
            prevEl: '.prev-{{ section.id }}'
          },
          scrollbar: {
            el: ".swiper-scrollbar-{{ section.id }}.swiper-scrollbar",
            draggable: true
            // hide: true
          },
      });
    });
  </script>
{% endunless %}
{% schema %}
{
  "name": "Content Block New",
  "settings": [
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Full Width Section",
      "default": true
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Key Features"
    },
    {
      "type": "checkbox",
      "id": "enable_slider",
      "label": "Enable Slider",
      "default": true
    },
    {
      "type": "range",
      "id": "slides_per_view",
      "min": 3,
      "max": 6,
      "step": 0.2,
      "label": "Slides Per View",
      "default": 3
    },
    {
      "type": "range",
      "id": "slides_per_view_mbl",
      "min": 1,
      "max": 2,
      "step": 0.2,
      "label": "Slides Per View On Mobile",
      "default": 1.2
    },
    {
      "type": "select",
      "id": "color",
      "label": "Color scheme",
      "options": [
        {
          "value": "dark",
          "label": "Dark Mode"
        },
        {
          "value": "light",
          "label": "Light Mode"
        },
      ],
      "default": "light"
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin Top",
      "default": 0
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin Bottom",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Top",
      "default": 48
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 48
    },
    {
      "type": "header",
      "content": "Section Spacing Mobile"
    },
    {
      "type": "range",
      "id": "margin_top_m",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin Top",
      "default": 0
    },
    {
      "type": "range",
      "id": "margin_bottom_m",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin Bottom",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_top_m",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Top",
      "default": 32
    },
    {
      "type": "range",
      "id": "padding_bottom_m",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 32
    }
  ],
  "blocks": [
    {
      "type": "card",
      "name": "Card",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
      ]
    }
  ],
  "presets": [
    {
      "name": "Content Block New"
    }
  ]
}
{% endschema %}
